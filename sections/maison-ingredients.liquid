    margin: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_ingredients__subheading {
      font-size: {{ section.settings.subheading_font_size_mobile }}px;
    }
  }

  /* Ingredients Grid */
  .maison_commerce_maison_ingredients__grid {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.card_gap_desktop }}px;
    justify-content: center;
    width: 100%;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_ingredients__grid {
      flex-direction: column;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  /* Ingredient Card */
  .maison_commerce_maison_ingredients__card {
    background-color: {{ section.settings.card_bg_color }};
    border: 1px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_border_radius_desktop }}px;
    padding: {{ section.settings.card_padding_desktop }}px;
    display: flex;
    gap: {{ section.settings.card_content_gap_desktop }}px;
    align-items: center;
    width: {{ section.settings.card_width_desktop }}px;
    box-sizing: border-box;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_ingredients__card {
      width: 100%;
      border-radius: {{ section.settings.card_border_radius_mobile }}px;
      padding: {{ section.settings.card_padding_mobile }}px;
      gap: {{ section.settings.card_content_gap_mobile }}px;
    }
  }

  /* Image Wrapper */
  .maison_commerce_maison_ingredients__image-wrapper {
    flex-shrink: 0;
    width: {{ section.settings.image_width_desktop }}px;
    height: {{ section.settings.image_height_desktop }}px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_ingredients__image-wrapper {
      width: {{ section.settings.image_width_mobile }}px;
      height: {{ section.settings.image_height_mobile }}px;
    }
  }

  .maison_commerce_maison_ingredients__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .maison_commerce_maison_ingredients__image-wrapper .placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  /* Text Content */
  .maison_commerce_maison_ingredients__text-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.text_gap }}px;
    align-items: flex-start;
    min-width: 0;
  }

  /* Ingredient Name */
  .maison_commerce_maison_ingredients__ingredient-name {
    font-family: 'Gotham', sans-serif;
    font-size: {{ section.settings.name_font_size_desktop }}px;
    font-weight: 700;
    line-height: 1.5;
    color: {{ section.settings.name_color }};
    margin: 0;
    white-space: nowrap;
  }

