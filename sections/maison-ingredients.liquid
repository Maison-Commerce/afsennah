<section class="maison_commerce_maison_ingredients">
  <div class="maison_commerce_maison_ingredients__container">
    <div class="maison_commerce_maison_ingredients__content">
      <!-- Heading Section -->
      <div class="maison_commerce_maison_ingredients__heading-section">
        {% if section.settings.heading != blank %}
          <h2 class="maison_commerce_maison_ingredients__heading">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="maison_commerce_maison_ingredients__subheading">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>

      <!-- Ingredients Grid -->
      {% if section.blocks.size > 0 %}
        <div class="maison_commerce_maison_ingredients__grid">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'ingredient' %}
                <div class="maison_commerce_maison_ingredients__card" {{ block.shopify_attributes }}>
                  {% if block.settings.ingredient_image != blank %}
                    <div class="maison_commerce_maison_ingredients__image-wrapper">
                      <img 
                        src="{{ block.settings.ingredient_image | image_url: width: 302 }}" 
                        alt="{{ block.settings.ingredient_image.alt | default: block.settings.ingredient_name | escape }}"
                        class="maison_commerce_maison_ingredients__image"
                        width="{{ block.settings.ingredient_image.width }}"
                        height="{{ block.settings.ingredient_image.height }}"
                        loading="lazy"
                      />
                    </div>
                  {% else %}
                    <div class="maison_commerce_maison_ingredients__image-wrapper">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}

                  <div class="maison_commerce_maison_ingredients__text-content">
                    {% if block.settings.ingredient_name != blank %}
                      <h3 class="maison_commerce_maison_ingredients__ingredient-name">
                        {{ block.settings.ingredient_name }}
                      </h3>
                    {% endif %}

                    {% if block.settings.ingredient_description != blank %}
                      <p class="maison_commerce_maison_ingredients__ingredient-description">
                        {{ block.settings.ingredient_description }}
                      </p>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Section Container */
  .maison_commerce_maison_ingredients {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_ingredients {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_ingredients__container {
    max-width: 100%;
    margin: 0 auto;
  }

  /* Content */
  .maison_commerce_maison_ingredients__content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.heading_gap_desktop }}px;
    align-items: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_ingredients__content {
      gap: {{ section.settings.heading_gap_mobile }}px;
    }
  }

  /* Heading Section */
