<section class="maison_commerce_maison_features_bar">
  <div class="maison_commerce_maison_features_bar__container">
    <div class="maison_commerce_maison_features_bar__features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="maison_commerce_maison_features_bar__feature" {{ block.shopify_attributes }}>
            <div class="maison_commerce_maison_features_bar__icon-wrapper">
              {% if block.settings.icon_type == 'shipping' %}
                <svg class="maison_commerce_maison_features_bar__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 7H21L19 12H5L3 7Z" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M5 12V19H19V12" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9 19V12" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% elsif block.settings.icon_type == 'subscribe' %}
                <svg class="maison_commerce_maison_features_bar__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2Z" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M8 12C8 14.2091 9.79086 16 12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8C9.79086 8 8 9.79086 8 12Z" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 8V12L14 14" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% elsif block.settings.icon_type == 'support' %}
                <svg class="maison_commerce_maison_features_bar__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M22 6L12 13L2 6" stroke="#E98C36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% elsif block.settings.icon_type == 'custom' and block.settings.custom_icon != blank %}
                <img 
                  src="{{ block.settings.custom_icon | image_url: width: 100 }}" 
                  alt=""
                  class="maison_commerce_maison_features_bar__icon maison_commerce_maison_features_bar__icon--image"
                  width="{{ block.settings.custom_icon.width }}"
                  height="{{ block.settings.custom_icon.height }}"
                  loading="lazy"
                />
              {% endif %}
            </div>
            <div class="maison_commerce_maison_features_bar__content">
              {% if block.settings.title != blank %}
                <h3 class="maison_commerce_maison_features_bar__title">
                  {{ block.settings.title }}
                </h3>
              {% endif %}
              {% if block.settings.subtitle != blank %}
                <p class="maison_commerce_maison_features_bar__subtitle">
                  {{ block.settings.subtitle }}
                </p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Section Container */
  .maison_commerce_maison_features_bar {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_features_bar {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_features_bar__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  /* Features Grid */
  .maison_commerce_maison_features_bar__features {
    display: flex;
    gap: {{ section.settings.feature_gap_desktop }}px;
    align-items: flex-start;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_features_bar__features {
      flex-direction: column;
      gap: {{ section.settings.feature_gap_mobile }}px;
    }
  }

  /* Feature */
  .maison_commerce_maison_features_bar__feature {
    display: flex;
    gap: {{ section.settings.icon_content_gap_desktop }}px;
    align-items: flex-start;
    flex: 1;
    padding: {{ section.settings.feature_padding_desktop }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_features_bar__feature {
      gap: {{ section.settings.icon_content_gap_mobile }}px;
      padding: {{ section.settings.feature_padding_mobile }}px;
    }
  }

  /* Icon Wrapper */
  .maison_commerce_maison_features_bar__icon-wrapper {
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: {{ section.settings.icon_border_radius }}px;
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_features_bar__icon-wrapper {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }

  /* Icon */
  .maison_commerce_maison_features_bar__icon {
    width: {{ section.settings.icon_inner_size_desktop }}px;
    height: {{ section.settings.icon_inner_size_desktop }}px;
    flex-shrink: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_features_bar__icon {
      width: {{ section.settings.icon_inner_size_mobile }}px;
      height: {{ section.settings.icon_inner_size_mobile }}px;
    }
  }

  .maison_commerce_maison_features_bar__icon--image {
    object-fit: contain;
  }

  /* Content */
  .maison_commerce_maison_features_bar__content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.title_subtitle_gap }}px;
    justify-content: center;
    flex: 1;
    min-width: 0;
  }

  /* Title */
  .maison_commerce_maison_features_bar__title {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0;
    white-space: nowrap;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_features_bar__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }
  }

  /* Subtitle */
  .maison_commerce_maison_features_bar__subtitle {
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_features_bar__subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
    }
  }
</style>

