      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_products_grid__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap_desktop }}px;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__container {
      gap: {{ section.settings.content_gap_mobile }}px;
    }
  }

  /* Header */
  .maison_commerce_maison_products_grid__header {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.header_gap_desktop }}px;
    align-items: center;
    text-align: center;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__header {
      gap: {{ section.settings.header_gap_mobile }}px;
    }
  }

  .maison_commerce_maison_products_grid__heading {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.heading_line_height_desktop }};
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-transform: capitalize;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: {{ section.settings.heading_line_height_mobile }};
    }
  }

  .maison_commerce_maison_products_grid__subtitle {
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    max-width: {{ section.settings.subtitle_max_width }}px;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
      max-width: 100%;
    }
  }

  /* Products Grid */
  .maison_commerce_maison_products_grid__products {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ section.settings.product_gap_desktop }}px;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__products {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.product_gap_mobile }}px;
    }

    /* Hide products beyond the first 2 on mobile */
    .maison_commerce_maison_products_grid__product:nth-child(n+3) {
      display: none;
    }
  }

  /* Product Card */
  .maison_commerce_maison_products_grid__product {
    background-color: {{ section.settings.product_bg_color }};
    border: 1px solid {{ section.settings.product_border_color }};
    border-radius: {{ section.settings.product_border_radius }}px;
    padding: {{ section.settings.product_padding }}px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.product_inner_gap }}px;
    position: relative;
  }

  /* Best Seller Badge */
  .maison_commerce_maison_products_grid__bestseller-badge {
    position: absolute;
    top: -{{ section.settings.badge_offset }}px;
    left: 50%;
    transform: translateX(-50%);
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    border-radius: {{ section.settings.badge_border_radius }}px;
    padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: 600;
    line-height: 1.5;
    white-space: nowrap;
    z-index: 1;
  }

  /* Product Image */
  .maison_commerce_maison_products_grid__product-image-wrapper {
    position: relative;
    aspect-ratio: 1 / 1;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: {{ section.settings.image_bg_color }};
  }

  .maison_commerce_maison_products_grid__product-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .maison_commerce_maison_products_grid__product-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* Product Info */
  .maison_commerce_maison_products_grid__product-info {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.product_info_gap }}px;
    padding-top: {{ section.settings.product_info_padding_top }}px;
  }

  .maison_commerce_maison_products_grid__product-title {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.product_title_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.product_title_color }};
    margin: 0;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__product-info {
      gap: 2px;
    }
    .maison_commerce_maison_products_grid__product-title {
      font-size: {{ section.settings.product_title_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_products_grid__product-title a {
    color: inherit;
    text-decoration: none;
  }

  /* Rating */
  .maison_commerce_maison_products_grid__rating {
    display: flex;
    align-items: center;
    gap: {{ section.settings.rating_gap }}px;
  }

  .maison_commerce_maison_products_grid__stars {
    display: flex;
    align-items: center;
    gap: {{ section.settings.star_gap }}px;
  }

  .maison_commerce_maison_products_grid__star {
    width: {{ section.settings.star_size }}px;
    height: {{ section.settings.star_size }}px;
    flex-shrink: 0;
  }

  .maison_commerce_maison_products_grid__star--filled {
    fill: #E98C36;
  }

  .maison_commerce_maison_products_grid__star--empty {
    fill: #E0E0E0;
  }

  .maison_commerce_maison_products_grid__review-count {
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.review_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.review_color }};
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__star {
      width: 8.571px;
      height: 8.571px;
    }
    .maison_commerce_maison_products_grid__review-count {
      font-size: {{ section.settings.review_font_size_mobile }}px;
    }
  }

  /* Price */
  .maison_commerce_maison_products_grid__price {
    display: flex;
    align-items: center;
    gap: {{ section.settings.price_gap }}px;
    flex-wrap: wrap;
  }

  .maison_commerce_maison_products_grid__price-current {
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.price_font_size_desktop }}px;
    font-weight: 600;
    line-height: 1.5;
    color: {{ section.settings.price_color }};
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__price-current {
      font-size: {{ section.settings.price_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_products_grid__price-compare {
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.price_compare_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.price_compare_color }};
    text-decoration: line-through;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__price-compare {
      font-size: {{ section.settings.price_compare_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_products_grid__discount-badge {
    background-color: {{ section.settings.discount_badge_bg_color }};
    color: {{ section.settings.discount_badge_text_color }};
    border-radius: {{ section.settings.discount_badge_border_radius }}px;
    padding: {{ section.settings.discount_badge_padding_vertical }}px {{ section.settings.discount_badge_padding_horizontal }}px;
    font-family: 'Avenir Next', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.discount_badge_font_size }}px;
    font-weight: 600;
    line-height: 1.5;
    white-space: nowrap;
  }

  /* Button */
  .maison_commerce_maison_products_grid__button {
    background-color: {{ section.settings.button_bg_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: opacity 0.3s ease;
    height: {{ section.settings.button_height_desktop }}px;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__button {
      height: {{ section.settings.button_height_mobile }}px;
    }
  }

  .maison_commerce_maison_products_grid__button:hover {
    opacity: 0.9;
  }

  .maison_commerce_maison_products_grid__button {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.button_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.button_text_color }};
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__button {
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
  }

  /* Quiz Section */
  .maison_commerce_maison_products_grid__quiz {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.quiz_gap }}px;
    align-items: center;
    text-align: center;
  }

  .maison_commerce_maison_products_grid__quiz-text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.quiz_text_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.quiz_text_color }};
    margin: 0;
    max-width: {{ section.settings.quiz_text_max_width }}px;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__quiz-text {
      font-size: {{ section.settings.quiz_text_font_size_mobile }}px;
      max-width: 100%;
    }
  }

  .maison_commerce_maison_products_grid__quiz-button {
    background-color: {{ section.settings.quiz_button_bg_color }};
    color: {{ section.settings.quiz_button_text_color }};
    border-radius: {{ section.settings.quiz_button_border_radius }}px;
    padding: {{ section.settings.quiz_button_padding_vertical }}px {{ section.settings.quiz_button_padding_horizontal }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.quiz_button_gap }}px;
    text-decoration: none;
    transition: opacity 0.3s ease;
    height: {{ section.settings.quiz_button_height_desktop }}px;
    width: fit-content;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__quiz-button {
      height: {{ section.settings.quiz_button_height_mobile }}px;
      width: 100%;
    }
  }

  .maison_commerce_maison_products_grid__quiz-button:hover {
    opacity: 0.9;
  }

  .maison_commerce_maison_products_grid__quiz-button span {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.quiz_button_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    text-transform: capitalize;
  }

  @media (max-width: 1050px) {
    .maison_commerce_maison_products_grid__quiz-button span {
      font-size: {{ section.settings.quiz_button_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_products_grid__quiz-button-arrow {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }
</style>

