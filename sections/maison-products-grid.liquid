<section class="maison_commerce_maison_products_grid">
  <div class="maison_commerce_maison_products_grid__container">
    {% if section.settings.heading != blank or section.settings.subtitle != blank %}
      <div class="maison_commerce_maison_products_grid__header">
        {% if section.settings.heading != blank %}
          <h2 class="maison_commerce_maison_products_grid__heading">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="maison_commerce_maison_products_grid__subtitle">
            {{ section.settings.subtitle }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="maison_commerce_maison_products_grid__products">
        {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            {% assign product = block.settings.product %}
            <div class="maison_commerce_maison_products_grid__product" {{ block.shopify_attributes }}>
              {% if block.settings.show_bestseller_badge %}
                <div class="maison_commerce_maison_products_grid__bestseller-badge">
                  ðŸ”¥ BEST SELLER
                </div>
              {% endif %}

              <div class="maison_commerce_maison_products_grid__product-image-wrapper">
                <a href="{{ product.url }}" class="maison_commerce_maison_products_grid__product-link">
                  {% if product.featured_image %}
                    <img 
                      src="{{ product.featured_image | image_url: width: 600 }}" 
                      alt="{{ product.featured_image.alt | default: product.title | escape }}"
                      class="maison_commerce_maison_products_grid__product-image"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}"
                      loading="lazy"
                    />
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'maison_commerce_maison_products_grid__product-image' }}
                  {% endif %}
                </a>
              </div>

              <div class="maison_commerce_maison_products_grid__product-info">
                <h3 class="maison_commerce_maison_products_grid__product-title">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                {% if block.settings.show_rating %}
                  {% comment %} Try Loox metafields first {% endcomment %}
                  {% assign loox_rating = product.metafields.loox.avg_rating %}
                  {% assign loox_review_count = product.metafields.loox.num_reviews %}
                  
                  {% comment %} Fallback to custom metafields if Loox not available {% endcomment %}
                  {% if loox_rating == blank %}
                    {% assign rating_metafield = product.metafields[section.settings.rating_metafield_namespace][section.settings.rating_metafield_key] %}
                    {% assign product_rating = rating_metafield.value | default: rating_metafield | times: 1.0 %}
                  {% else %}
                    {% assign product_rating = loox_rating | times: 1.0 %}
                  {% endif %}
                  
                  {% if loox_review_count == blank %}
                    {% assign review_count_metafield = product.metafields[section.settings.review_count_metafield_namespace][section.settings.review_count_metafield_key] %}
                    {% assign product_review_count = review_count_metafield.value | default: review_count_metafield %}
                  {% else %}
                    {% assign product_review_count = loox_review_count %}
                  {% endif %}
                  
                  {% if product_rating > 0 or product_review_count != blank %}
                    <div class="maison_commerce_maison_products_grid__rating">
                      {% if product_rating > 0 %}
                        <div class="maison_commerce_maison_products_grid__stars">
                          {% assign rating_rounded = product_rating | round %}
                          {% for i in (1..5) %}
                            {% if i <= rating_rounded %}
                              <svg class="maison_commerce_maison_products_grid__star maison_commerce_maison_products_grid__star--filled" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0L10.1631 5.52786L16 6.11146L12 10.0557L12.9443 16L8 13.5279L3.05573 16L4 10.0557L0 6.11146L5.83686 5.52786L8 0Z" fill="#E98C36"/>
                              </svg>
                            {% else %}
                              <svg class="maison_commerce_maison_products_grid__star maison_commerce_maison_products_grid__star--empty" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0L10.1631 5.52786L16 6.11146L12 10.0557L12.9443 16L8 13.5279L3.05573 16L4 10.0557L0 6.11146L5.83686 5.52786L8 0Z" fill="#E0E0E0"/>
                              </svg>
                            {% endif %}
                          {% endfor %}
                        </div>
                      {% endif %}
                      {% if product_review_count != blank %}
                        <span class="maison_commerce_maison_products_grid__review-count">
                          ({{ product_review_count }} Reviews)
                        </span>
                      {% endif %}
                    </div>
                  {% endif %}
                {% endif %}

                <div class="maison_commerce_maison_products_grid__price">
                  {% if product.compare_at_price > product.price %}
                    <span class="maison_commerce_maison_products_grid__price-current">
                      {{ product.price | money }}
                    </span>
                    <span class="maison_commerce_maison_products_grid__price-compare">
                      {{ product.compare_at_price | money }}
                    </span>
                    {% assign discount_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                    <span class="maison_commerce_maison_products_grid__discount-badge">
                      You Save {{ discount_percent }}%
                    </span>
                  {% else %}
                    <span class="maison_commerce_maison_products_grid__price-current">
                      {{ product.price | money }}
                    </span>
                  {% endif %}
                </div>

                <a href="{{ product.url }}" class="maison_commerce_maison_products_grid__button">
                  {{ block.settings.button_text | default: 'Shop now' }}
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.quiz_text != blank or section.settings.quiz_button_text != blank %}
      <div class="maison_commerce_maison_products_grid__quiz">
        {% if section.settings.quiz_text != blank %}
          <p class="maison_commerce_maison_products_grid__quiz-text">
            {{ section.settings.quiz_text }}
          </p>
        {% endif %}
        {% if section.settings.quiz_button_url != blank and section.settings.quiz_button_text != blank %}
          <a href="{{ section.settings.quiz_button_url }}" class="maison_commerce_maison_products_grid__quiz-button">
            <span>{{ section.settings.quiz_button_text }}</span>
            <svg class="maison_commerce_maison_products_grid__quiz-button-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Section Container */
  .maison_commerce_maison_products_grid {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 1050px) {
