{%- liquid
  assign section_id = section.id
-%}

<section class="maison_commerce_maison_transformation_timeline" id="shopify-section-{{ section_id }}">
  {% style %}
    #shopify-section-{{ section_id }} {
      background: linear-gradient(to bottom, #FFFFFF, #F7F7FC);
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }

    @media (max-width: 768px) {
      #shopify-section-{{ section_id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
        padding-left: {{ section.settings.padding_left_mobile }}px;
        padding-right: {{ section.settings.padding_right_mobile }}px;
      }
    }
  {% endstyle %}

  <div class="maison_commerce_maison_transformation_timeline__container">
    <!-- Header -->
    <div class="maison_commerce_maison_transformation_timeline__header">
      {% if section.settings.heading != blank %}
        <h2 class="maison_commerce_maison_transformation_timeline__heading">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="maison_commerce_maison_transformation_timeline__description">
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>

    <!-- Cards Grid -->
    <div class="maison_commerce_maison_transformation_timeline__cards">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'phase_card' %}
            <div class="maison_commerce_maison_transformation_timeline__card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="maison_commerce_maison_transformation_timeline__card-image-wrapper">
                  <img 
                    src="{{ block.settings.image | image_url: width: 600 }}" 
                    alt="{{ block.settings.image.alt | default: block.settings.time_period | escape }}"
                    class="maison_commerce_maison_transformation_timeline__card-image"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    loading="lazy"
                  />
                  {% if block.settings.time_period != blank %}
                    <div class="maison_commerce_maison_transformation_timeline__badge" style="background-color: {{ block.settings.badge_color | default: section.settings.badge_color }};">
                      {{ block.settings.time_period | escape }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="maison_commerce_maison_transformation_timeline__card-content">
                  <div class="maison_commerce_maison_transformation_timeline__card-description">
                    {{ block.settings.description }}
                  </div>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Container */
  .maison_commerce_maison_transformation_timeline__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 44px 40px;
    background-color: transparent;
    border-radius: 32px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__container {
      padding: 32px 20px;
    }
  }

  /* Header */
  .maison_commerce_maison_transformation_timeline__header {
    display: flex;
    flex-direction: column;
    gap: 18px;
    align-items: center;
    justify-content: center;
    text-align: center;
    margin-bottom: 40px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__header {
      gap: 8px;
      margin-bottom: 32px;
    }
  }

  /* Heading */
  .maison_commerce_maison_transformation_timeline__heading {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.3;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-transform: capitalize;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
      max-width: 256px;
    }
  }

  /* Description */
  .maison_commerce_maison_transformation_timeline__description {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.description_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
    max-width: 500px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
      max-width: 100%;
    }
  }

  /* Cards Grid */
  .maison_commerce_maison_transformation_timeline__cards {
    display: flex;
    gap: {{ section.settings.card_gap_desktop }}px;
    align-items: flex-start;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__cards {
      flex-direction: column;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  /* Card */
  .maison_commerce_maison_transformation_timeline__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    border-radius: 24px;
    flex: 1;
    max-width: 100%;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__card {
      flex-direction: row;
      align-items: center;
      border-radius: 18px;
      width: 100%;
    }
  }

  /* Card Image Wrapper */
  .maison_commerce_maison_transformation_timeline__card-image-wrapper {
    position: relative;
    width: 100%;
    height: {{ section.settings.image_height_desktop }}px;
    border-radius: 32px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__card-image-wrapper {
      width: 132px;
      height: auto;
      border-radius: 24px;
      padding: 7.575px;
      flex-shrink: 0;
    }
  }

  /* Card Image */
  .maison_commerce_maison_transformation_timeline__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 32px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__card-image {
      border-radius: 24px;
      height: auto;
      aspect-ratio: 1;
    }
  }

  /* Badge */
  .maison_commerce_maison_transformation_timeline__badge {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) translateY(50%);
    background-color: {{ section.settings.badge_color }};
    color: {{ section.settings.badge_text_color }};
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.badge_font_size_desktop }}px;
    font-weight: 700;
    line-height: 1.5;
    padding: 4px 12px;
    border-radius: 12px;
    white-space: nowrap;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__badge {
      position: static;
      transform: none;
      font-size: {{ section.settings.badge_font_size_mobile }}px;
      border-radius: 8px;
      height: 22px;
      display: inline-flex;
      align-items: center;
      margin-bottom: 4px;
    }
  }

  /* Card Content */
  .maison_commerce_maison_transformation_timeline__card-content {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    padding: 32px 16px 16px;
    width: 100%;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__card-content {
      padding: 8px 16px;
      align-items: flex-start;
      flex: 1;
      gap: 4px;
    }
  }

  /* Card Description */
  .maison_commerce_maison_transformation_timeline__card-description {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.card_description_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.card_description_color }};
    text-align: center;
    margin: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_transformation_timeline__card-description {
      font-size: {{ section.settings.card_description_font_size_mobile }}px;
      font-weight: 300;
      text-align: left;
    }
  }
</style>

