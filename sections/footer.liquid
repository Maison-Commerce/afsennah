<footer class="maison_commerce_maison_footer">
  <div class="maison_commerce_maison_footer__container">
    {% if section.settings.show_logo and section.settings.logo != blank %}
      <div class="maison_commerce_maison_footer__logo-section">
        <div class="maison_commerce_maison_footer__logo-wrapper">
          {% if section.settings.logo_url != blank %}
            <a href="{{ section.settings.logo_url }}" class="maison_commerce_maison_footer__logo-link">
              <img 
                src="{{ section.settings.logo | image_url: width: 400 }}" 
                alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
                class="maison_commerce_maison_footer__logo"
                width="{{ section.settings.logo.width }}"
                height="{{ section.settings.logo.height }}"
                loading="lazy"
              />
            </a>
          {% else %}
            <img 
              src="{{ section.settings.logo | image_url: width: 400 }}" 
              alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
              class="maison_commerce_maison_footer__logo"
              width="{{ section.settings.logo.width }}"
              height="{{ section.settings.logo.height }}"
              loading="lazy"
            />
          {% endif %}
        </div>
        <div class="maison_commerce_maison_footer__divider"></div>
      </div>
    {% endif %}

    <div class="maison_commerce_maison_footer__main">
      {% if section.settings.show_brand_section %}
        <div class="maison_commerce_maison_footer__brand-section">
          {% if section.settings.brand_description != blank %}
            <div class="maison_commerce_maison_footer__brand-description">
              {{ section.settings.brand_description }}
            </div>
          {% endif %}
          {% if section.settings.cta_button_url != blank and section.settings.cta_button_text != blank %}
            <a href="{{ section.settings.cta_button_url }}" class="maison_commerce_maison_footer__cta-button">
              {{ section.settings.cta_button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="maison_commerce_maison_footer__navigation">
          {% for block in section.blocks %}
            {% if block.type == 'menu' %}
              <div class="maison_commerce_maison_footer__menu" {{ block.shopify_attributes }}>
                {% if block.settings.menu_title != blank %}
                  <h3 class="maison_commerce_maison_footer__menu-title">
                    {{ block.settings.menu_title }}
                  </h3>
                {% endif %}
                {% if block.settings.menu != blank %}
                  <ul class="maison_commerce_maison_footer__menu-list">
                    {% for link in block.settings.menu.links %}
                      <li class="maison_commerce_maison_footer__menu-item">
                        <a href="{{ link.url }}" class="maison_commerce_maison_footer__menu-link">
                          {{ link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.show_newsletter %}
        <div class="maison_commerce_maison_footer__newsletter">
          {% if section.settings.newsletter_heading != blank %}
            <h3 class="maison_commerce_maison_footer__newsletter-heading">
              {{ section.settings.newsletter_heading }}
            </h3>
          {% endif %}
          {% if section.settings.newsletter_description != blank %}
            <p class="maison_commerce_maison_footer__newsletter-description">
              {{ section.settings.newsletter_description }}
            </p>
          {% endif %}
          {% form 'customer', class: 'maison_commerce_maison_footer__newsletter-form' %}
            <div class="maison_commerce_maison_footer__newsletter-input-wrapper">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="{{ section.settings.newsletter_placeholder }}"
                class="maison_commerce_maison_footer__newsletter-input"
                required
              />
            </div>
            <button type="submit" class="maison_commerce_maison_footer__newsletter-button">
              {{ section.settings.newsletter_button_text }}
            </button>
          {% endform %}
        </div>
      {% endif %}
    </div>

    <div class="maison_commerce_maison_footer__bottom">
      <div class="maison_commerce_maison_footer__divider"></div>
      <div class="maison_commerce_maison_footer__credits">
        {% if section.settings.copyright_text != blank %}
          <p class="maison_commerce_maison_footer__copyright">
            {{ section.settings.copyright_text }}
          </p>
        {% endif %}
        {% if section.settings.show_payment_icons %}
          <div class="maison_commerce_maison_footer__payment-icons">
            {% for block in section.blocks %}
              {% if block.type == 'payment_icon' %}
                <div class="maison_commerce_maison_footer__payment-icon" {{ block.shopify_attributes }}>
                  {% if block.settings.payment_icon != blank %}
                    <img 
                      src="{{ block.settings.payment_icon | image_url: width: 50 }}" 
                      alt="{{ block.settings.payment_icon.alt | default: block.settings.payment_name | escape }}"
                      class="maison_commerce_maison_footer__payment-icon-image"
                      width="{{ block.settings.payment_icon.width }}"
                      height="{{ block.settings.payment_icon.height }}"
                      loading="lazy"
                    />
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

