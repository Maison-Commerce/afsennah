    const swiperContainer = sectionEl.querySelector('.maison_commerce_maison_you_may_also_like__swiper');
    if (!swiperContainer) return;

    // Check if Swiper is loaded
    if (typeof Swiper === 'undefined') {
      setTimeout(initYouMayAlsoLikeSwiper, 100);
      return;
    }

    // Destroy existing instance if it exists
    if (swiperContainer.swiper) {
      swiperContainer.swiper.destroy(true, true);
    }

    const container = swiperContainer.closest('.maison_commerce_maison_you_may_also_like__container');
    const prevButton = container ? container.querySelector('.maison_commerce_maison_you_may_also_like__nav-button--prev') : null;
    const nextButton = container ? container.querySelector('.maison_commerce_maison_you_may_also_like__nav-button--next') : null;
    const paginationEl = swiperContainer.querySelector('.maison_commerce_maison_you_may_also_like__pagination');
    
    const swiperConfig = {
      spaceBetween: {{ section.settings.slide_gap_desktop }},
      loop: {{ section.settings.enable_loop }},
      {% if section.settings.enable_autoplay %}
      autoplay: {
        delay: {{ section.settings.autoplay_delay }},
        disableOnInteraction: false,
