    background-color: {{ section.settings.button_bg_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    color: {{ section.settings.button_text_color }};
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.button_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    text-align: center;
    transition: opacity 0.3s ease, background-color 0.3s ease;
    margin-top: auto;
  }

  .maison_commerce_maison_you_may_also_like__card-link:hover .maison_commerce_maison_you_may_also_like__button {
    opacity: 0.9;
    background-color: {{ section.settings.button_hover_bg_color }};
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__button {
      font-size: {{ section.settings.button_font_size_mobile }}px;
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
      border-radius: {{ section.settings.button_border_radius_mobile }}px;
    }
  }

  /* Pagination */
  .maison_commerce_maison_you_may_also_like__pagination {
    position: static;
    margin-top: {{ section.settings.pagination_margin_top }}px;
    display: flex;
    justify-content: center;
    gap: {{ section.settings.pagination_gap }}px;
    margin-top: 24px;
  }

  .maison_commerce_maison_you_may_also_like__pagination .swiper-pagination-bullet {
    width: {{ section.settings.pagination_bullet_size }}px;
    height: 4px;
