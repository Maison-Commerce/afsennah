    overflow: hidden;
    background-color: {{ section.settings.image_bg_color }};
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__image {
      border-radius: {{ section.settings.image_border_radius_mobile }}px;
    }
  }

  .maison_commerce_maison_you_may_also_like__image img,
  .maison_commerce_maison_you_may_also_like__image .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Info */
  .maison_commerce_maison_you_may_also_like__info {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.info_gap }}px;
    flex: 1;
    padding-top: {{ section.settings.info_padding_top }}px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__info {
      gap: {{ section.settings.info_gap_mobile }}px;
      padding-top: {{ section.settings.info_padding_top_mobile }}px;
    }
  }

  /* Title */
  .maison_commerce_maison_you_may_also_like__title {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.title_color }};
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
  }

  /* Rating */
  .maison_commerce_maison_you_may_also_like__rating {
    display: flex;
    align-items: center;
    gap: {{ section.settings.rating_gap }}px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__rating {
      gap: {{ section.settings.rating_gap_mobile }}px;
    }
  }

  .maison_commerce_maison_you_may_also_like__stars {
    display: flex;
    align-items: center;
    gap: {{ section.settings.star_gap }}px;
  }

  @media (max-width: 768px) {
