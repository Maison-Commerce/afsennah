    padding: {{ section.settings.nav_button_padding }}px;
    transition: opacity 0.3s ease, background-color 0.3s ease;
  }

  .maison_commerce_maison_you_may_also_like__nav-button:hover {
    opacity: 0.8;
    background-color: {{ section.settings.nav_button_hover_bg }};
  }

  .maison_commerce_maison_you_may_also_like__nav-button.swiper-button-disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .maison_commerce_maison_you_may_also_like__nav-button svg {
    width: {{ section.settings.nav_icon_size }}px;
    height: {{ section.settings.nav_icon_size }}px;
  }

  /* Swiper */
  .maison_commerce_maison_you_may_also_like__swiper {
    position: relative;
    overflow: visible;
    width: 100%;
  }

  .maison_commerce_maison_you_may_also_like__slide {
    height: auto;
    width: auto;
  }

  /* Card */
  .maison_commerce_maison_you_may_also_like__card {
    background-color: {{ section.settings.card_bg_color }};
    border: 1px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    position: relative;
    height: 100%;
    width: 100%;
    max-width: 296px;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .maison_commerce_maison_you_may_also_like__card:hover {
    transform: translateY(-2px);
    box-shadow: {{ section.settings.card_shadow }};
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__card {
      padding: {{ section.settings.card_padding_mobile }}px;
      border-radius: {{ section.settings.card_border_radius_mobile }}px;
    }
