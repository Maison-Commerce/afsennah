{%- liquid
  assign section_id = section.id
  if section.settings.products != blank
    assign products = section.settings.products
  else
    assign products = collections.all.products | limit: section.settings.products_limit
  endif
-%}

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section class="maison_commerce_maison_you_may_also_like">
  {% style %}
    #shopify-section-{{ section_id }} {
      background-color: {{ section.settings.bg_color }};
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
      overflow: hidden;
    }

    @media (max-width: 768px) {
      #shopify-section-{{ section_id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
        padding-left: {{ section.settings.padding_left_mobile }}px;
        padding-right: {{ section.settings.padding_right_mobile }}px;
      }
    }
  {% endstyle %}

  <div class="maison_commerce_maison_you_may_also_like__container">
    <!-- Header -->
    <div class="maison_commerce_maison_you_may_also_like__header">
      <div class="maison_commerce_maison_you_may_also_like__header-content">
        {% if section.settings.heading != blank %}
          <h2 class="maison_commerce_maison_you_may_also_like__heading maison_commerce_maison_you_may_also_like__heading--desktop">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.heading_mobile != blank %}
          <h2 class="maison_commerce_maison_you_may_also_like__heading maison_commerce_maison_you_may_also_like__heading--mobile">
            {{ section.settings.heading_mobile }}
          </h2>
        {% endif %}
        {% if section.settings.subtitle_mobile != blank %}
          <p class="maison_commerce_maison_you_may_also_like__subtitle">
            {{ section.settings.subtitle_mobile }}
          </p>
        {% endif %}
      </div>
      
      <!-- Desktop Navigation -->
      <div class="maison_commerce_maison_you_may_also_like__nav-desktop">
        <button class="maison_commerce_maison_you_may_also_like__nav-button maison_commerce_maison_you_may_also_like__nav-button--prev" aria-label="Previous">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M6 8L2 12M2 12L6 16M2 12H22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="maison_commerce_maison_you_may_also_like__nav-button maison_commerce_maison_you_may_also_like__nav-button--next" aria-label="Next">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M18 8L22 12M22 12L18 16M22 12H2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Swiper Container -->
    <div class="swiper maison_commerce_maison_you_may_also_like__swiper">
      <div class="swiper-wrapper">
        {% for product in products %}
          {%- liquid
            assign variant = product.selected_or_first_available_variant
            assign compare_at_price = variant.compare_at_price
            assign price = variant.price
            assign has_discount = false
            assign discount_percent = 0
            if compare_at_price > price
              assign has_discount = true
              assign discount_percent = compare_at_price | minus: price | times: 100.0 | divided_by: compare_at_price | round
            endif
            
            assign rating = product.metafields.loox.avg_rating | default: 5.0
            assign review_count = product.metafields.loox.num_reviews | default: 0
            assign best_seller = false
            for block in section.blocks
              if block.type == 'product' and block.settings.product.id == product.id
                assign best_seller = block.settings.show_best_seller
                break
              endif
            endfor
          -%}
          
          <div class="swiper-slide maison_commerce_maison_you_may_also_like__slide">
            <div class="maison_commerce_maison_you_may_also_like__card">
              {% if best_seller %}
                <div class="maison_commerce_maison_you_may_also_like__badge">
                  ðŸ”¥ BEST SELLER
                </div>
              {% endif %}

              <a href="{{ product.url }}" class="maison_commerce_maison_you_may_also_like__card-link">
                <!-- Product Image -->
                {% if product.featured_image != blank %}
                  <div class="maison_commerce_maison_you_may_also_like__image">
                    <img 
                      src="{{ product.featured_image | image_url: width: 600 }}" 
                      alt="{{ product.featured_image.alt | default: product.title | escape }}"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}"
                      loading="lazy"
                    />
                  </div>
                {% else %}
                  <div class="maison_commerce_maison_you_may_also_like__image">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}

                <!-- Product Info -->
                <div class="maison_commerce_maison_you_may_also_like__info">
                  <!-- Title -->
                  <h3 class="maison_commerce_maison_you_may_also_like__title">
                    {{ product.title | escape }}
                  </h3>

                  <!-- Rating -->
                  <div class="maison_commerce_maison_you_may_also_like__rating">
                    <div class="maison_commerce_maison_you_may_also_like__stars">
                      {% assign rating_int = rating | floor %}
                      {% for i in (1..5) %}
                        {% if i <= rating_int %}
                          <span class="maison_commerce_maison_you_may_also_like__star maison_commerce_maison_you_may_also_like__star--filled">â˜…</span>
                        {% else %}
                          <span class="maison_commerce_maison_you_may_also_like__star maison_commerce_maison_you_may_also_like__star--empty">â˜†</span>
                        {% endif %}
                      {% endfor %}
                    </div>
                    {% if review_count > 0 %}
                      <span class="maison_commerce_maison_you_may_also_like__review-count">
                        ({{ review_count | number_with_delimiter }} Reviews)
                      </span>
                    {% endif %}
                  </div>

                  <!-- Price -->
                  <div class="maison_commerce_maison_you_may_also_like__price">
                    <span class="maison_commerce_maison_you_may_also_like__price-current">
                      {{ price | money }}
                    </span>
                    {% if has_discount %}
                      <span class="maison_commerce_maison_you_may_also_like__price-compare">
                        {{ compare_at_price | money }}
                      </span>
                      <span class="maison_commerce_maison_you_may_also_like__discount-badge">
                        You Save {{ discount_percent }}%
                      </span>
                    {% endif %}
                  </div>

                  <!-- Button -->
                  <div class="maison_commerce_maison_you_may_also_like__button">
                    {{ section.settings.button_text | default: 'Shop now' }}
                  </div>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Pagination -->
      <div class="swiper-pagination maison_commerce_maison_you_may_also_like__pagination"></div>
    </div>

    <!-- Mobile Quiz CTA -->
    {% if section.settings.show_quiz_cta %}
      <div class="maison_commerce_maison_you_may_also_like__quiz-cta">
        {% if section.settings.quiz_text != blank %}
          <p class="maison_commerce_maison_you_may_also_like__quiz-text">
            {{ section.settings.quiz_text }}
          </p>
        {% endif %}
        {% if section.settings.quiz_url != blank %}
          <a href="{{ section.settings.quiz_url }}" class="maison_commerce_maison_you_may_also_like__quiz-button">
            <span>{{ section.settings.quiz_button_text | default: 'Take the Quiz' }}</span>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

