    font-weight: 600;
    line-height: 1.5;
    color: {{ section.settings.price_color }};
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_you_may_also_like__price-current {
      font-size: {{ section.settings.price_font_size_mobile }}px;
