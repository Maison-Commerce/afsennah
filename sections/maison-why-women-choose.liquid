{%- liquid
  assign section_id = section.id
-%}

<section class="maison_commerce_maison_why_women_choose">
  {% style %}
    #shopify-section-{{ section_id }} {
      background: linear-gradient(to bottom, #F7F7FC, #FFFEF3);
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }

    @media (max-width: 950px) {
      #shopify-section-{{ section_id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
        padding-left: {{ section.settings.padding_left_mobile }}px;
        padding-right: {{ section.settings.padding_right_mobile }}px;
      }
    }
  {% endstyle %}

  <div class="maison_commerce_maison_why_women_choose__container">
    <!-- Heading -->
    {% if section.settings.heading != blank %}
      <h2 class="maison_commerce_maison_why_women_choose__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <!-- Feature Cards Grid -->
    <div class="maison_commerce_maison_why_women_choose__cards">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'feature_card' %}
            <div class="maison_commerce_maison_why_women_choose__card" {{ block.shopify_attributes }}>
              <div class="maison_commerce_maison_why_women_choose__card-content">
                <!-- Icon -->
                {% if block.settings.icon_image != blank %}
                  <div class="maison_commerce_maison_why_women_choose__icon" style="background-color: {{ block.settings.icon_bg_color | default: section.settings.icon_bg_color }};">
                    <img 
                      src="{{ block.settings.icon_image | image_url: width: 100 }}" 
                      alt="{{ block.settings.icon_image.alt | default: block.settings.title | escape }}"
                      class="maison_commerce_maison_why_women_choose__icon-image"
                      width="{{ block.settings.icon_image.width }}"
                      height="{{ block.settings.icon_image.height }}"
                      loading="lazy"
                    />
                  </div>
                {% endif %}

                <!-- Text Content -->
                <div class="maison_commerce_maison_why_women_choose__text">
                  {% if block.settings.title != blank %}
                    <h3 class="maison_commerce_maison_why_women_choose__title">
                      {{ block.settings.title | escape }}
                    </h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <div class="maison_commerce_maison_why_women_choose__description">
                      {{ block.settings.description }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- CTA Button -->
    {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
      <div class="maison_commerce_maison_why_women_choose__cta">
        <a href="{{ section.settings.cta_url }}" class="maison_commerce_maison_why_women_choose__button">
          <span class="maison_commerce_maison_why_women_choose__button-text">
            {{ section.settings.cta_text | escape }}
          </span>
          <span class="maison_commerce_maison_why_women_choose__button-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Container */
  .maison_commerce_maison_why_women_choose__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.container_gap_desktop }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__container {
      gap: {{ section.settings.container_gap_mobile }}px;
    }
  }

  /* Heading */
  .maison_commerce_maison_why_women_choose__heading {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.3;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-align: center;
    text-transform: capitalize;
    max-width: 600px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
      max-width: 100%;
    }
  }

  /* Cards Grid */
  .maison_commerce_maison_why_women_choose__cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.card_gap_desktop }}px;
    width: 100%;
    max-width: {{ section.settings.cards_max_width }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__cards {
      grid-template-columns: 1fr;
      gap: {{ section.settings.card_gap_mobile }}px;
      max-width: 100%;
    }
  }

  /* Card */
  .maison_commerce_maison_why_women_choose__card {
    background-color: {{ section.settings.card_bg_color }};
    border: 1px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding_desktop }}px;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .maison_commerce_maison_why_women_choose__card:hover {
    box-shadow: {{ section.settings.card_shadow }};
    transform: translateY(-2px);
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__card {
      padding: {{ section.settings.card_padding_mobile }}px;
    }
  }

  /* Card Content */
  .maison_commerce_maison_why_women_choose__card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.card_content_gap_desktop }}px;
    text-align: center;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__card-content {
      flex-direction: row;
      align-items: center;
      text-align: left;
      gap: {{ section.settings.card_content_gap_mobile }}px;
    }
  }

  /* Icon */
  .maison_commerce_maison_why_women_choose__icon {
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background-color: {{ section.settings.icon_bg_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__icon {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }

  .maison_commerce_maison_why_women_choose__icon-image {
    width: {{ section.settings.icon_inner_size_desktop }}px;
    height: {{ section.settings.icon_inner_size_desktop }}px;
    object-fit: contain;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__icon-image {
      width: {{ section.settings.icon_inner_size_mobile }}px;
      height: {{ section.settings.icon_inner_size_mobile }}px;
    }
  }

  /* Text Content */
  .maison_commerce_maison_why_women_choose__text {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.text_gap }}px;
    flex: 1;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__text {
      gap: {{ section.settings.text_gap_mobile }}px;
    }
  }

  /* Title */
  .maison_commerce_maison_why_women_choose__title {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.title_color }};
    margin: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_why_women_choose__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
  }

  /* Description */
  .maison_commerce_maison_why_women_choose__description {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
