{%- liquid
  assign section_id = section.id
-%}

<section class="maison_commerce_maison_how_to_use">
  {% style %}
    #shopify-section-{{ section_id }} {
      background: linear-gradient(to bottom, #FFFEF3, #F7F7FC);
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      padding-left: {{ section.settings.padding_left_desktop }}px;
      padding-right: {{ section.settings.padding_right_desktop }}px;
    }

    @media (max-width: 950px) {
      #shopify-section-{{ section_id }} {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
        padding-left: {{ section.settings.padding_left_mobile }}px;
        padding-right: {{ section.settings.padding_right_mobile }}px;
      }
    }
  {% endstyle %}

  <div class="maison_commerce_maison_how_to_use__container">
    <!-- Heading -->
    {% if section.settings.heading != blank %}
      <div class="maison_commerce_maison_how_to_use__header">
        <h2 class="maison_commerce_maison_how_to_use__heading">
          {{ section.settings.heading }}
        </h2>
      </div>
    {% endif %}

    <!-- Step Cards -->
    <div class="maison_commerce_maison_how_to_use__cards">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'step_card' %}
            <div class="maison_commerce_maison_how_to_use__card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="maison_commerce_maison_how_to_use__card-image-wrapper">
                  <img 
                    src="{{ block.settings.image | image_url: width: 600 }}" 
                    alt="{{ block.settings.image.alt | default: block.settings.step_label | escape }}"
                    class="maison_commerce_maison_how_to_use__card-image"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    loading="lazy"
                  />
                  {% if block.settings.step_number != blank and block.settings.step_label != blank %}
                    {% comment %} Desktop badge - absolutely positioned {% endcomment %}
                    <div class="maison_commerce_maison_how_to_use__badge maison_commerce_maison_how_to_use__badge--desktop" style="background-color: {{ block.settings.badge_color | default: section.settings.badge_color }};">
                      <span class="maison_commerce_maison_how_to_use__badge-step">Step {{ block.settings.step_number }}: </span>
                      <span class="maison_commerce_maison_how_to_use__badge-label">{{ block.settings.step_label | escape }}</span>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="maison_commerce_maison_how_to_use__card-content">
                  {% if block.settings.step_number != blank and block.settings.step_label != blank %}
                    {% comment %} Mobile badge - inline with content {% endcomment %}
                    <div class="maison_commerce_maison_how_to_use__badge maison_commerce_maison_how_to_use__badge--mobile" style="background-color: {{ block.settings.badge_color | default: section.settings.badge_color }};">
                      <span class="maison_commerce_maison_how_to_use__badge-step">Step {{ block.settings.step_number }}: </span>
                      <span class="maison_commerce_maison_how_to_use__badge-label">{{ block.settings.step_label | escape }}</span>
                    </div>
                  {% endif %}
                  <div class="maison_commerce_maison_how_to_use__card-description">
                    {{ block.settings.description }}
                  </div>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Container */
  .maison_commerce_maison_how_to_use__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 44px 0;
    border-radius: 32px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__container {
      padding: 32px 0;
    }
  }

  /* Header */
  .maison_commerce_maison_how_to_use__header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ section.settings.header_gap }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__header {
      margin-bottom: {{ section.settings.header_gap_mobile }}px;
    }
  }

  /* Heading */
  .maison_commerce_maison_how_to_use__heading {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.3;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-transform: capitalize;
    text-align: center;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
    }
  }

  /* Cards Grid */
  .maison_commerce_maison_how_to_use__cards {
    display: flex;
    gap: {{ section.settings.card_gap_desktop }}px;
    align-items: flex-start;
    justify-content: center;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__cards {
      flex-direction: column;
      gap: {{ section.settings.card_gap_mobile }}px;
    }
  }

  /* Card */
  .maison_commerce_maison_how_to_use__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background-color: {{ section.settings.card_bg_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    width: 100%;
    max-width: 331px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__card {
      flex-direction: row;
      max-width: 100%;
      align-items: center;
      border-radius: {{ section.settings.card_border_radius_mobile }}px;
      width: 100%;
    }
  }

  /* Card Image Wrapper */
  .maison_commerce_maison_how_to_use__card-image-wrapper {
    position: relative;
    width: 100%;
    height: {{ section.settings.image_height_desktop }}px;
    border-radius: {{ section.settings.image_border_radius_desktop }}px {{ section.settings.image_border_radius_desktop }}px 0 0;
    flex-shrink: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__card-image-wrapper {
      width: {{ section.settings.image_width_mobile }}px;
      height: {{ section.settings.image_height_mobile }}px;
      border-radius: {{ section.settings.image_border_radius_mobile }}px 0 0 {{ section.settings.image_border_radius_mobile }}px;
      padding: 0px;
      flex-shrink: 0;
    }
  }

  /* Card Image */
  .maison_commerce_maison_how_to_use__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius_desktop }}px {{ section.settings.image_border_radius_desktop }}px 0 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__card-image {
      border-radius: {{ section.settings.image_border_radius_mobile }}px;
      height: auto;
      aspect-ratio: 1;
    }
  }

  /* Badge */
  .maison_commerce_maison_how_to_use__badge {
    background-color: {{ section.settings.badge_color }};
    color: {{ section.settings.badge_text_color }};
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-weight: 700;
    line-height: 1.5;
    white-space: nowrap;
  }

  /* Desktop Badge - Absolutely positioned */
  .maison_commerce_maison_how_to_use__badge--desktop {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) translateY(50%);
    font-size: {{ section.settings.badge_font_size_desktop }}px;
    padding: 4px 12px;
    border-radius: {{ section.settings.badge_border_radius }}px;
    z-index: 1;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__badge--desktop {
      display: none;
    }
  }

  /* Mobile Badge - Inline with content */
  .maison_commerce_maison_how_to_use__badge--mobile {
    display: none;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__badge--mobile {
      display: inline-flex;
      align-items: center;
      font-size: {{ section.settings.badge_font_size_mobile }}px;
      padding: 0 12px;
      border-radius: {{ section.settings.badge_border_radius_mobile }}px;
      height: {{ section.settings.badge_height_mobile }}px;
      margin-bottom: {{ section.settings.badge_margin_bottom_mobile }}px;
    }
  }

  .maison_commerce_maison_how_to_use__badge-step {
    font-weight: 700;
  }

  .maison_commerce_maison_how_to_use__badge-label {
    font-weight: 400;
  }

  /* Card Content */
  .maison_commerce_maison_how_to_use__card-content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.card_content_gap_desktop }}px;
    align-items: center;
    padding: {{ section.settings.card_content_padding_top_desktop }}px {{ section.settings.card_content_padding_horizontal }}px {{ section.settings.card_content_padding_bottom_desktop }}px;
    width: 100%;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_how_to_use__card-content {
      padding: {{ section.settings.card_content_padding_top_mobile }}px {{ section.settings.card_content_padding_horizontal }}px {{ section.settings.card_content_padding_bottom_mobile }}px;
      align-items: flex-start;
      flex: 1;
      gap: {{ section.settings.card_content_gap_mobile }}px;
    }
  }

  /* Card Description */
  .maison_commerce_maison_how_to_use__card-description {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.description_font_size_desktop }}px;
    font-weight: 400;
