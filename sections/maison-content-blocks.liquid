<section class="maison_commerce_maison_content_blocks">
  <div class="maison_commerce_maison_content_blocks__container">
    <div class="maison_commerce_maison_content_blocks__wrapper">
      {% comment %} Render image or visual block first {% endcomment %}
      {% for block in section.blocks %}
        {% if block.type == 'image' or block.type == 'visual' %}
          {% if block.type == 'image' %}
            <div class="maison_commerce_maison_content_blocks__image-block" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="maison_commerce_maison_content_blocks__image-wrapper">
                  <img 
                    src="{{ block.settings.image | image_url: width: 1240 }}" 
                    alt="{{ block.settings.image.alt | default: block.settings.image_alt | escape }}"
                    class="maison_commerce_maison_content_blocks__image"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    loading="lazy"
                  />
                </div>
              {% endif %}
            </div>
          {% elsif block.type == 'visual' %}
            <div class="maison_commerce_maison_content_blocks__visual-block" {{ block.shopify_attributes }}>
              {% if block.settings.visual_image != blank %}
                <div class="maison_commerce_maison_content_blocks__visual-wrapper">
                  <img 
                    src="{{ block.settings.visual_image | image_url: width: 1240 }}" 
                    alt="{{ block.settings.visual_image.alt | default: 'Visual illustration' | escape }}"
                    class="maison_commerce_maison_content_blocks__visual-image"
                    width="{{ block.settings.visual_image.width }}"
                    height="{{ block.settings.visual_image.height }}"
                    loading="lazy"
                  />
                </div>
              {% endif %}

              {% if block.settings.show_features %}
                <div class="maison_commerce_maison_content_blocks__features">
                  {% for feature_block in section.blocks %}
                    {% if feature_block.type == 'feature' %}
                      {% assign visual_id = block.id | split: '-' | last %}
                      {% assign feature_visual_id = feature_block.settings.visual_block_id | split: '-' | last %}
                      {% if feature_block.settings.visual_block_id == block.id or visual_id == feature_visual_id %}
                        <div class="maison_commerce_maison_content_blocks__feature" style="top: {{ feature_block.settings.position_top }}%; left: {{ feature_block.settings.position_left }}%;" {{ feature_block.shopify_attributes }}>
                          <div class="maison_commerce_maison_content_blocks__feature-badge">
                            <svg class="maison_commerce_maison_content_blocks__feature-icon" width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M10.5 0C4.70101 0 0 4.70101 0 10.5C0 16.299 4.70101 21 10.5 21C16.299 21 21 16.299 21 10.5C21 4.70101 16.299 0 10.5 0ZM15.7071 8.29289L9.70711 14.2929C9.31658 14.6834 8.68342 14.6834 8.29289 14.2929L5.29289 11.2929C4.90237 10.9024 4.90237 10.2692 5.29289 9.87868C5.68342 9.48815 6.31658 9.48815 6.70711 9.87868L9 12.1716L14.2929 6.87868C14.6834 6.48815 15.3166 6.48815 15.7071 6.87868C16.0976 7.2692 16.0976 7.90237 15.7071 8.29289Z" fill="#1A365D"/>
                            </svg>
                            <span class="maison_commerce_maison_content_blocks__feature-text">{{ feature_block.settings.feature_text }}</span>
                          </div>
                        </div>
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}

      {% comment %} Render content blocks (title, text, button, quote) {% endcomment %}
      {% assign has_content = false %}
      {% for block in section.blocks %}
        {% if block.type == 'title' or block.type == 'text' or block.type == 'button' or block.type == 'quote' %}
          {% unless has_content %}
            {% assign has_content = true %}
            <div class="maison_commerce_maison_content_blocks__content-block">
          {% endunless %}
          
          {% case block.type %}
            {% when 'title' %}
              {% if block.settings.title_text != blank %}
                <h2 class="maison_commerce_maison_content_blocks__title" {{ block.shopify_attributes }}>
                  {{ block.settings.title_text }}
                </h2>
              {% endif %}

            {% when 'text' %}
              {% if block.settings.text_content != blank %}
                <div class="maison_commerce_maison_content_blocks__text" {{ block.shopify_attributes }}>
                  {{ block.settings.text_content }}
                </div>
              {% endif %}

            {% when 'button' %}
              {% if block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" class="maison_commerce_maison_content_blocks__button" {{ block.shopify_attributes }}>
                  <span>{{ block.settings.button_text }}</span>
                  <svg class="maison_commerce_maison_content_blocks__button-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% endif %}

            {% when 'quote' %}
              {% if block.settings.quote_text != blank %}
                <div class="maison_commerce_maison_content_blocks__quote" {{ block.shopify_attributes }}>
                  <p class="maison_commerce_maison_content_blocks__quote-text">
                    {{ block.settings.quote_text }}
                  </p>
                  {% if block.settings.quote_author != blank %}
                    <div class="maison_commerce_maison_content_blocks__quote-author">
                      {{ block.settings.quote_author }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
          {% endcase %}
        {% endif %}
      {% endfor %}
      
      {% if has_content %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Section Container */
  .maison_commerce_maison_content_blocks {
    background: linear-gradient(to bottom, {{ section.settings.bg_gradient_start }}, {{ section.settings.bg_gradient_end }});
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_content_blocks__container {
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Wrapper */
  .maison_commerce_maison_content_blocks__wrapper {
    display: flex;
    gap: {{ section.settings.content_gap_desktop }}px;
    align-items: stretch;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__wrapper {
      flex-direction: column;
      gap: {{ section.settings.content_gap_mobile }}px;
    }
  }

  /* Image Block */
  .maison_commerce_maison_content_blocks__image-block {
    flex: {{ section.settings.image_width_desktop }}%;
    min-width: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__image-block {
      flex: 1;
      width: 100%;
      order: {{ section.settings.image_order_mobile }};
    }
  }

  .maison_commerce_maison_content_blocks__image-wrapper {
    position: relative;
    border-radius: {{ section.settings.image_border_radius_desktop }}px;
    overflow: hidden;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__image-wrapper {
      border-radius: {{ section.settings.image_border_radius_mobile }}px;
    }
  }

  .maison_commerce_maison_content_blocks__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Visual Block */
  .maison_commerce_maison_content_blocks__visual-block {
    width: 100%;
    max-width: 620px;
    height: fit-content;
    aspect-ratio: 1 / 0.95807;
    min-width: 0;
    position: relative;
    border-radius: {{ section.settings.visual_border_radius_desktop }}px;
    overflow: hidden;
    background: {{ section.settings.visual_bg_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__visual-block {
      flex: 1;
      max-width: 100%;
      width: 100%;
      order: {{ section.settings.visual_order_mobile }};
      min-height: {{ section.settings.visual_min_height_mobile }}px;
      border-radius: {{ section.settings.visual_border_radius_mobile }}px;
    }
  }

  .maison_commerce_maison_content_blocks__visual-wrapper {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .maison_commerce_maison_content_blocks__visual-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Features */
  .maison_commerce_maison_content_blocks__features {
    position: absolute;
    inset: 0;
    z-index: 2;
    pointer-events: none;
  }

  .maison_commerce_maison_content_blocks__feature {
    position: absolute;
    transform: translate(-50%, -50%);
    pointer-events: auto;
  }

  .maison_commerce_maison_content_blocks__feature-badge {
    background-color: white;
    border-radius: {{ section.settings.feature_border_radius }}px;
    padding: {{ section.settings.feature_padding_vertical }}px {{ section.settings.feature_padding_horizontal }}px;
    display: flex;
    align-items: center;
    gap: {{ section.settings.feature_gap }}px;
    box-shadow: {{ section.settings.feature_shadow }};
  }

  .maison_commerce_maison_content_blocks__feature-icon {
    width: {{ section.settings.feature_icon_size }}px;
    height: {{ section.settings.feature_icon_size }}px;
    flex-shrink: 0;
  }

  .maison_commerce_maison_content_blocks__feature-text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.feature_font_size }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.feature_text_color }};
    white-space: nowrap;
  }

  /* Content Block */
  .maison_commerce_maison_content_blocks__content-block {
    width: 100%;
    max-width: 620px;
    min-width: 0;
    justify-content: center;
    background-color: {{ section.settings.content_bg_color }};
    border: 1px solid {{ section.settings.content_border_color }};
    border-radius: {{ section.settings.content_border_radius_desktop }}px;
    padding: {{ section.settings.content_padding_desktop }}px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_inner_gap }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__content-block {
      flex: 1;
      max-width: 100%;
      width: 100%;
      order: {{ section.settings.content_order_mobile }};
      border-radius: {{ section.settings.content_border_radius_mobile }}px;
      padding: {{ section.settings.content_padding_mobile }}px;
    }
  }

  /* Title */
  .maison_commerce_maison_content_blocks__title {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0;
    text-transform: capitalize;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }
  }

  /* Text */
  .maison_commerce_maison_content_blocks__text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.text_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_content_blocks__text p {
    margin: 0 0 {{ section.settings.text_paragraph_gap }}px 0;
  }

  .maison_commerce_maison_content_blocks__text p:last-child {
    margin-bottom: 0;
  }

  .maison_commerce_maison_content_blocks__text strong {
    font-weight: 700;
  }

  /* Button */
  .maison_commerce_maison_content_blocks__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.button_gap }}px;
    text-decoration: none;
    transition: opacity 0.3s ease;
    height: {{ section.settings.button_height_desktop }}px;
    width: fit-content;
    box-sizing: border-box;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__button {
      height: {{ section.settings.button_height_mobile }}px;
      width: 100%;
    }
  }

  .maison_commerce_maison_content_blocks__button:hover {
    opacity: 0.9;
  }

  .maison_commerce_maison_content_blocks__button span {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.button_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    text-transform: capitalize;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_content_blocks__button span {
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_content_blocks__button-arrow {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Quote */
  .maison_commerce_maison_content_blocks__quote {
    background-color: {{ section.settings.quote_bg_color }};
    border-radius: {{ section.settings.quote_border_radius }}px;
    padding: {{ section.settings.quote_padding }}px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.quote_gap }}px;
    margin-top: 14px;
  }

  .maison_commerce_maison_content_blocks__quote-text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.quote_text_font_size }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.quote_text_color }};
    margin: 0;
  }

  .maison_commerce_maison_content_blocks__quote-author {
    background-color: white;
    border-radius: {{ section.settings.quote_author_border_radius }}px;
    padding: {{ section.settings.quote_author_padding_vertical }}px {{ section.settings.quote_author_padding_horizontal }}px;
    display: inline-block;
    width: fit-content;
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.quote_author_font_size }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.quote_author_color }};
  }
</style>

