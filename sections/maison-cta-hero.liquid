<section class="maison_commerce_maison_cta_hero">
  {% if section.settings.show_decorative_drops %}
    <div class="maison_commerce_maison_cta_hero__decorative-drops">
      {% if section.settings.decorative_image_left != blank %}
        <div class="maison_commerce_maison_cta_hero__drop maison_commerce_maison_cta_hero__drop--left" style="top: {{ section.settings.drop_left_top }}%; left: {{ section.settings.drop_left_left }}%; transform: rotate({{ section.settings.drop_left_rotation }}deg);">
          <img 
            src="{{ section.settings.decorative_image_left | image_url: width: 400 }}" 
            alt=""
            class="maison_commerce_maison_cta_hero__drop-image"
            width="{{ section.settings.decorative_image_left.width }}"
            height="{{ section.settings.decorative_image_left.height }}"
            loading="lazy"
            style="opacity: {{ section.settings.drop_opacity }}; filter: blur({{ section.settings.drop_blur }}px);"
          />
        </div>
      {% endif %}
      {% if section.settings.decorative_image_right != blank %}
        <div class="maison_commerce_maison_cta_hero__drop maison_commerce_maison_cta_hero__drop--right" style="top: {{ section.settings.drop_right_top }}%; right: {{ section.settings.drop_right_right }}%; transform: rotate({{ section.settings.drop_right_rotation }}deg);">
          <img 
            src="{{ section.settings.decorative_image_right | image_url: width: 400 }}" 
            alt=""
            class="maison_commerce_maison_cta_hero__drop-image"
            width="{{ section.settings.decorative_image_right.width }}"
            height="{{ section.settings.decorative_image_right.height }}"
            loading="lazy"
            style="opacity: {{ section.settings.drop_opacity }}; filter: blur({{ section.settings.drop_blur }}px);"
          />
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="maison_commerce_maison_cta_hero__container">
    <div class="maison_commerce_maison_cta_hero__content">
      <div class="maison_commerce_maison_cta_hero__content-top">
        <div class="maison_commerce_maison_cta_hero__content-top-head">
            {% if section.settings.show_rating %}
                <div class="maison_commerce_maison_cta_hero__rating">
                <div class="maison_commerce_maison_cta_hero__stars">
                    {% assign rating_value = section.settings.rating_value | default: 5 | times: 1.0 %}
                    {% assign rating_rounded = rating_value | round %}
                    {% for i in (1..5) %}
                    {% if i <= rating_rounded %}
                        <svg class="maison_commerce_maison_cta_hero__star" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 0L10.1631 5.52786L16 6.11146L12 10.0557L12.9443 16L8 13.5279L3.05573 16L4 10.0557L0 6.11146L5.83686 5.52786L8 0Z" fill="#FF8C00"/>
                        </svg>
                    {% else %}
                        <svg class="maison_commerce_maison_cta_hero__star" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 0L10.1631 5.52786L16 6.11146L12 10.0557L12.9443 16L8 13.5279L3.05573 16L4 10.0557L0 6.11146L5.83686 5.52786L8 0Z" fill="#E0E0E0"/>
                        </svg>
                    {% endif %}
                    {% endfor %}
                </div>
                {% if section.settings.rating_text != blank %}
                    <div class="maison_commerce_maison_cta_hero__rating-text">
                    {{ section.settings.rating_text }}
                    </div>
                {% endif %}
                </div>
            {% endif %}

            {% if section.settings.heading != blank %}
                <h1 class="maison_commerce_maison_cta_hero__heading">
                {{ section.settings.heading }}
                </h1>
            {% endif %}
        </div>

        {% if section.settings.body_text != blank %}
            <div class="maison_commerce_maison_cta_hero__body-text">
            {{ section.settings.body_text }}
            </div>
        {% endif %}

        {% if section.blocks.size > 0 %}
            <div class="maison_commerce_maison_cta_hero__badges">
            {% for block in section.blocks %}
                {% if block.type == 'badge' %}
                <div class="maison_commerce_maison_cta_hero__badge" {{ block.shopify_attributes }}>
                    <svg xmlns="http://www.w3.org/2000/svg" class="maison_commerce_maison_cta_hero__badge-icon" width="18" height="18" viewBox="0 0 18 18" fill="none">
                        <path d="M8.8125 0C3.94549 0 0 3.94549 0 8.8125C0 13.6795 3.94549 17.625 8.8125 17.625C13.6795 17.625 17.625 13.6795 17.625 8.8125C17.625 3.94549 13.6795 0 8.8125 0Z" fill="#CCCCE8"/>
                        <path d="M12.1454 6.49463L7.2289 11.4111L4.99414 9.17634" stroke="#1A365D" stroke-width="1.45455" stroke-linecap="square" stroke-linejoin="round"/>
                    </svg>
                    <span class="maison_commerce_maison_cta_hero__badge-text">{{ block.settings.badge_text }}</span>
                </div>
                {% endif %}
            {% endfor %}
            </div>
        {% endif %}
      </div>

      <div class="maison_commerce_maison_cta_hero__cta">
        {% if section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" class="maison_commerce_maison_cta_hero__button">
            <span>{{ section.settings.button_text }}</span>
            <svg class="maison_commerce_maison_cta_hero__button-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}

        {% if section.settings.social_proof_text != blank %}
          <div class="maison_commerce_maison_cta_hero__social-proof">
            {{ section.settings.social_proof_text }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Section Container */
  .maison_commerce_maison_cta_hero {
    background: linear-gradient(to bottom, {{ section.settings.bg_gradient_start }}, {{ section.settings.bg_gradient_end }});
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
    position: relative;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Decorative Drops */
  .maison_commerce_maison_cta_hero__decorative-drops {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .maison_commerce_maison_cta_hero__drop {
    position: absolute;
    z-index: 0;
  }

  .maison_commerce_maison_cta_hero__drop--left {
    width: 180px;
    height: {{ section.settings.drop_left_height }}px;
  }

  .maison_commerce_maison_cta_hero__drop--right {
    width: 182px;
    height: {{ section.settings.drop_right_height }}px;
  }

  .maison_commerce_maison_cta_hero__drop-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__decorative-drops {
      display: none;
    }
  }

  /* Container */
  .maison_commerce_maison_cta_hero__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* Content */
  .maison_commerce_maison_cta_hero__content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap_desktop }}px;
    align-items: center;
    text-align: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__content {
      gap: {{ section.settings.content_gap_mobile }}px;
      align-items: flex-start;
      text-align: left;
    }
  }

  .maison_commerce_maison_cta_hero__content-top{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .maison_commerce_maison_cta_hero__content-top-head{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 18px;
  }

  /* Rating */
  .maison_commerce_maison_cta_hero__rating {
    display: flex;
    align-items: center;
    gap: {{ section.settings.rating_gap }}px;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__rating {
      justify-content: flex-start;
    }
  }

  .maison_commerce_maison_cta_hero__stars {
    display: flex;
    align-items: center;
    gap: {{ section.settings.star_gap }}px;
  }

  .maison_commerce_maison_cta_hero__star {
    width: {{ section.settings.star_size }}px;
    height: {{ section.settings.star_size }}px;
    flex-shrink: 0;
  }

  .maison_commerce_maison_cta_hero__rating-text {
    font-family: 'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.rating_text_font_size_desktop }}px;
    font-weight: 300;
    line-height: 1.5;
    color: {{ section.settings.rating_text_color }};
  }

  .maison_commerce_maison_cta_hero__rating-text p{
    margin: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__rating-text {
      font-size: {{ section.settings.rating_text_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_cta_hero__rating-text strong {
    font-weight: 600;
  }

  /* Heading */
  .maison_commerce_maison_cta_hero__heading {
    font-family: 'Vanilla Ravioli', serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: {{ section.settings.heading_line_height_desktop }};
    color: {{ section.settings.heading_color }};
    margin: 0;
    max-width: {{ section.settings.heading_max_width }}px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: {{ section.settings.heading_line_height_mobile }};
      max-width: 100%;
      text-align: center;
    }
  }

  /* Body Text */
  .maison_commerce_maison_cta_hero__body-text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.body_text_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.body_text_color }};
    max-width: {{ section.settings.body_text_max_width }}px;
  }

  .maison_commerce_maison_cta_hero__body-text p{
    margin: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__body-text {
      font-size: {{ section.settings.body_text_font_size_mobile }}px;
      max-width: 100%;
      text-align: center;
    }
  }

  .maison_commerce_maison_cta_hero__body-text strong {
    font-weight: 700;
  }

  /* Badges */
  .maison_commerce_maison_cta_hero__badges {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.badge_gap }}px;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__badges {
      justify-content: flex-start;
      gap: 8px;
    }

    .maison_commerce_maison_cta_hero__badges .maison_commerce_maison_cta_hero__badge:nth-child(1){
        display: none;
    }
  }

  .maison_commerce_maison_cta_hero__badge {
    background-color: {{ section.settings.badge_bg_color }};
    border-radius: {{ section.settings.badge_border_radius }}px;
    padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
    display: flex;
    align-items: center;
    gap: {{ section.settings.badge_icon_text_gap }}px;
  }

  .maison_commerce_maison_cta_hero__badge-icon {
    width: {{ section.settings.badge_icon_size }}px;
    height: {{ section.settings.badge_icon_size }}px;
    flex-shrink: 0;
  }

  .maison_commerce_maison_cta_hero__badge-text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.badge_text_color }};
    white-space: nowrap;
  }

  /* CTA Section */
  .maison_commerce_maison_cta_hero__cta {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.cta_gap }}px;
    align-items: center;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__cta {
      width: 100%;
      align-items: stretch;
    }
  }

  /* Button */
  .maison_commerce_maison_cta_hero__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.button_gap }}px;
    text-decoration: none;
    transition: opacity 0.3s ease;
    height: {{ section.settings.button_height_desktop }}px;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__button {
      height: {{ section.settings.button_height_mobile }}px;
      width: 100%;
    }
  }

  .maison_commerce_maison_cta_hero__button:hover {
    opacity: 0.9;
  }

  .maison_commerce_maison_cta_hero__button span {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.button_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    text-transform: capitalize;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__button span {
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_cta_hero__button-arrow {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Social Proof */
  .maison_commerce_maison_cta_hero__social-proof {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.social_proof_font_size_desktop }}px;
    font-weight: 300;
    line-height: 1.5;
    color: {{ section.settings.social_proof_color }};
    margin: 0;
    max-width: {{ section.settings.social_proof_max_width }}px;
    text-align: center;
  }

  .maison_commerce_maison_cta_hero__social-proof p{
    margin: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_cta_hero__social-proof {
      font-size: {{ section.settings.social_proof_font_size_mobile }}px;
      max-width: 100%;
      text-align: center;
    }
  }

  .maison_commerce_maison_cta_hero__social-proof strong {
    font-weight: 500;
  }
</style>

