<div class="maison_commerce_maison_header_announcement_bar">
  <div class="maison_commerce_maison_header_announcement_bar__container">
    {% for block in section.blocks %}
      {% if block.type == 'announcement' %}
        <div class="maison_commerce_maison_header_announcement_bar__item" {{ block.shopify_attributes }}>
          <div class="maison_commerce_maison_header_announcement_bar__icon-wrapper">
            <svg class="maison_commerce_maison_header_announcement_bar__icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 8L6 11L13 4" stroke="#1A365D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          {% if block.settings.text != blank %}
            <p class="maison_commerce_maison_header_announcement_bar__text">
              {{ block.settings.text }}
            </p>
          {% endif %}
        </div>
        {% unless forloop.last %}
          <div class="maison_commerce_maison_header_announcement_bar__divider"></div>
        {% endunless %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Announcement Bar Container */
  .maison_commerce_maison_header_announcement_bar {
    background-color: {{ section.settings.bg_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_header_announcement_bar__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.alignment }};
    gap: {{ section.settings.item_gap_desktop }}px;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__container {
      justify-content: flex-start;
      gap: 0;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-behavior: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .maison_commerce_maison_header_announcement_bar__container::-webkit-scrollbar {
      display: none;
    }
  }

  /* Announcement Item */
  .maison_commerce_maison_header_announcement_bar__item {
    display: flex;
    align-items: center;
    gap: {{ section.settings.icon_text_gap }}px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__item {
      min-width: 100%;
      justify-content: center;
      scroll-snap-align: start;
    }
  }

  /* Icon Wrapper */
  .maison_commerce_maison_header_announcement_bar__icon-wrapper {
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: {{ section.settings.icon_border_radius }}px;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  /* Icon */
  .maison_commerce_maison_header_announcement_bar__icon {
    width: {{ section.settings.icon_inner_size }}px;
    height: {{ section.settings.icon_inner_size }}px;
    flex-shrink: 0;
  }

  /* Text */
  .maison_commerce_maison_header_announcement_bar__text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.text_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }
  }

  /* Divider */
  .maison_commerce_maison_header_announcement_bar__divider {
    width: {{ section.settings.divider_width }}px;
    height: {{ section.settings.divider_height }}px;
    background-color: {{ section.settings.divider_color }};
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__divider {
      display: none;
    }
  }
</style>

<script>
  (function() {
    const container = document.querySelector('#shopify-section-{{ section.id }} .maison_commerce_maison_header_announcement_bar__container');
    if (!container) return;

    let autoScrollInterval = null;
    let currentIndex = 0;
    let scrollPosition = 0;
    const scrollSpeed = 0.3;
    let isPaused = false;

    function initAutoScroll() {
      // Only initialize on mobile
      if (window.innerWidth > 768) {
        if (autoScrollInterval) {
          clearInterval(autoScrollInterval);
          autoScrollInterval = null;
        }
        return;
      }

      // Don't initialize if already initialized
      if (autoScrollInterval) return;

      const items = container.querySelectorAll('.maison_commerce_maison_header_announcement_bar__item');
      if (items.length <= 1) return;

      const itemWidth = container.clientWidth;
      const totalWidth = itemWidth * items.length;

      function autoScroll() {
        if (isPaused) return;

        scrollPosition += scrollSpeed;
        
        // When we reach the end, reset to start for seamless loop
        if (scrollPosition >= totalWidth - itemWidth) {
          scrollPosition = 0;
        }

        container.scrollLeft = scrollPosition;
      }

      // Start auto-scrolling every 16ms (~60fps)
      autoScrollInterval = setInterval(autoScroll, 16);

      // Pause on hover/touch
      container.addEventListener('mouseenter', () => {
        isPaused = true;
      });

      container.addEventListener('mouseleave', () => {
        isPaused = false;
        scrollPosition = container.scrollLeft;
      });

      // Touch events for mobile
      let touchStartX = 0;
      let touchStartScrollLeft = 0;

      container.addEventListener('touchstart', (e) => {
        isPaused = true;
        touchStartX = e.touches[0].clientX;
        touchStartScrollLeft = container.scrollLeft;
      });

      container.addEventListener('touchend', () => {
        isPaused = false;
        scrollPosition = container.scrollLeft;
      });
    }

    // Initialize on load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAutoScroll);
    } else {
      initAutoScroll();
    }

    // Re-initialize on resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        if (autoScrollInterval) {
          clearInterval(autoScrollInterval);
          autoScrollInterval = null;
        }
        scrollPosition = 0;
        container.scrollLeft = 0;
        initAutoScroll();
      }, 250);
    });
  })();
</script>

