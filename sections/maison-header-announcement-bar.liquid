<div class="maison_commerce_maison_header_announcement_bar">
  {% comment %} Desktop: Regular announcement blocks {% endcomment %}
  <div class="maison_commerce_maison_header_announcement_bar__container maison_commerce_maison_header_announcement_bar__container--desktop">
    {% for block in section.blocks %}
      {% if block.type == 'announcement' %}
        <div class="maison_commerce_maison_header_announcement_bar__item" {{ block.shopify_attributes }}>
          <div class="maison_commerce_maison_header_announcement_bar__icon-wrapper">
            <svg class="maison_commerce_maison_header_announcement_bar__icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 8L6 11L13 4" stroke="#1A365D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          {% if block.settings.text != blank %}
            <p class="maison_commerce_maison_header_announcement_bar__text">
              {{ block.settings.text }}
            </p>
          {% endif %}
        </div>
        {% unless forloop.last %}
          <div class="maison_commerce_maison_header_announcement_bar__divider"></div>
        {% endunless %}
      {% endif %}
    {% endfor %}
  </div>

  {% comment %} Mobile: Swiper slider with mobile_announcement blocks {% endcomment %}
  <div class="maison_commerce_maison_header_announcement_bar__container maison_commerce_maison_header_announcement_bar__container--mobile swiper" id="announcement-bar-mobile-{{ section.id }}">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'mobile_announcement' %}
          <div class="maison_commerce_maison_header_announcement_bar__item swiper-slide" {{ block.shopify_attributes }}>
            <div class="maison_commerce_maison_header_announcement_bar__icon-wrapper">
              <svg class="maison_commerce_maison_header_announcement_bar__icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 8L6 11L13 4" stroke="#1A365D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            {% if block.settings.text != blank %}
              <p class="maison_commerce_maison_header_announcement_bar__text">
                {{ block.settings.text }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Announcement Bar Container */
  .maison_commerce_maison_header_announcement_bar {
    background-color: {{ section.settings.bg_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_header_announcement_bar__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  /* Desktop Container */
  .maison_commerce_maison_header_announcement_bar__container--desktop {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.alignment }};
    gap: {{ section.settings.item_gap_desktop }}px;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__container--desktop {
      display: none;
    }
  }

  /* Mobile Container */
  .maison_commerce_maison_header_announcement_bar__container--mobile {
    display: none!important;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__container--mobile {
      display: block!important;
    }

    .maison_commerce_maison_header_announcement_bar__container--mobile .swiper-wrapper {
      display: flex;
    }

    .maison_commerce_maison_header_announcement_bar__container--mobile .swiper-slide {
      width: 100%;
      flex-shrink: 0;
    }
  }

  /* Announcement Item */
  .maison_commerce_maison_header_announcement_bar__item {
    display: flex;
    align-items: center;
    gap: {{ section.settings.icon_text_gap }}px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__item {
      width: 100%;
      justify-content: center;
    }
  }

  /* Icon Wrapper */
  .maison_commerce_maison_header_announcement_bar__icon-wrapper {
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: {{ section.settings.icon_border_radius }}px;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  /* Icon */
  .maison_commerce_maison_header_announcement_bar__icon {
    width: {{ section.settings.icon_inner_size }}px;
    height: {{ section.settings.icon_inner_size }}px;
    flex-shrink: 0;
  }

  /* Text */
  .maison_commerce_maison_header_announcement_bar__text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.text_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_header_announcement_bar__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }
  }

  /* Divider */
  .maison_commerce_maison_header_announcement_bar__divider {
    width: {{ section.settings.divider_width }}px;
    height: {{ section.settings.divider_height }}px;
    background-color: {{ section.settings.divider_color }};
    flex-shrink: 0;
  }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  (function() {
    const container = document.querySelector('#announcement-bar-mobile-{{ section.id }}');
    if (!container) return;

    let swiperInstance = null;

    function initSwiper() {
      // Only initialize on mobile
      if (window.innerWidth > 768) {
        if (swiperInstance) {
          swiperInstance.destroy(true, true);
          swiperInstance = null;
        }
        return;
      }

      // Don't initialize if already initialized
      if (swiperInstance) return;

      // Count mobile announcement items
      const mobileItems = container.querySelectorAll('.swiper-slide');
      if (mobileItems.length <= 1) return;

      swiperInstance = new Swiper(container, {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: true,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
          pauseOnMouseEnter: true,
        },
        speed: 500,
        allowTouchMove: true,
      });
    }

    function loadSwiperAndInit() {
      if (window.Swiper) {
        initSwiper();
      } else {
        // Wait for Swiper to load
        const checkSwiper = setInterval(() => {
          if (window.Swiper) {
            clearInterval(checkSwiper);
            initSwiper();
          }
        }, 100);
        // Timeout after 5 seconds
        setTimeout(() => clearInterval(checkSwiper), 5000);
      }
    }

    // Initialize on load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadSwiperAndInit);
    } else {
      loadSwiperAndInit();
    }

    // Re-initialize on resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        if (swiperInstance) {
          swiperInstance.destroy(true, true);
          swiperInstance = null;
        }
        initSwiper();
      }, 250);
    });

    // Re-initialize in theme editor
    if (Shopify.designMode) {
      document.addEventListener('shopify:section:load', (event) => {
        if (event.detail.sectionId === '{{ section.id }}') {
          setTimeout(() => {
            if (swiperInstance) {
              swiperInstance.destroy(true, true);
              swiperInstance = null;
            }
            loadSwiperAndInit();
          }, 100);
        }
      });
    }
  })();
</script>

