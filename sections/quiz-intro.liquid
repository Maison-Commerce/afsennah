    }

    #shopify-section-{{ section.id }} .quiz-btn-resume,
    #shopify-section-{{ section.id }} .quiz-btn-restart-banner {
        padding: 6px 16px;
        font-size: 13px;
        font-weight: 500;
        border-radius: var(--btn-border-radius);
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
        font-family: 'Gotham', sans-serif;
    }

    #shopify-section-{{ section.id }} .quiz-btn-resume {
        background: var(--primary-color, #000);
        color: var(--button-text-color, #fff);
    }

    #shopify-section-{{ section.id }} .quiz-btn-resume:hover {
