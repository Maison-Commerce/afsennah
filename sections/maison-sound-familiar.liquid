    .maison_commerce_maison_sound_familiar__card {
      padding: {{ section.settings.card_padding_mobile }}px;
    }
  }

  /* Content Wrapper - Two Column Layout */
  .maison_commerce_maison_sound_familiar__content-wrapper {
    display: flex;
    gap: {{ section.settings.content_gap_desktop }}px;
    align-items: stretch;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_sound_familiar__content-wrapper {
      flex-direction: column;
      gap: {{ section.settings.content_gap_mobile }}px;
    }
  }

  /* Media Wrapper */
  .maison_commerce_maison_sound_familiar__media-wrapper {
    width: 100%;
    max-width: {{ section.settings.media_width_desktop }}px;
    position: relative;
    border-radius: {{ section.settings.media_border_radius }}px;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_sound_familiar__media-wrapper {
      width: 100%;
      order: 2;
      aspect-ratio: 1 / 1.0602;
      max-width: 100%;
    }
  }

  .maison_commerce_maison_sound_familiar__media-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.media_border_radius }}px;
  }

  .maison_commerce_maison_sound_familiar__video-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: {{ section.settings.media_border_radius }}px;
  }

  .maison_commerce_maison_sound_familiar__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ section.settings.media_border_radius }}px;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_sound_familiar__video-wrapper, .maison_commerce_maison_sound_familiar__video {
        border-radius: 18px;
    }
  }

  /* Play Button */
  .maison_commerce_maison_sound_familiar__play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 75px;
    height: 75px;
    background-color: rgba(0, 0, 0, 0.6);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    padding: 0;
    opacity: 1;
  }

  .maison_commerce_maison_sound_familiar__play-button:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  /* Hide button when video is playing (unless hovering) */
  .maison_commerce_maison_sound_familiar__video-wrapper.playing .maison_commerce_maison_sound_familiar__play-button {
    opacity: 0;
    pointer-events: none;
  }

  /* Show button on hover when playing */
  .maison_commerce_maison_sound_familiar__video-wrapper.playing:hover .maison_commerce_maison_sound_familiar__play-button {
    opacity: 1;
    pointer-events: auto;
  }

  .maison_commerce_maison_sound_familiar__play-icon {
    width: 45px;
    height: 45px;
    flex-shrink: 0;
  }

  /* Pause icon (shown when video is playing) */
  .maison_commerce_maison_sound_familiar__play-button.playing .maison_commerce_maison_sound_familiar__play-icon {
    display: none;
  }

  .maison_commerce_maison_sound_familiar__play-button.playing::after {
    content: '';
    width: 30px;
    height: 30px;
    background-color: white;
    clip-path: polygon(0% 0%, 0% 100%, 35% 100%, 35% 0%, 65% 0%, 65% 100%, 100% 100%, 100% 0%);
  }

  /* Content Column */
  .maison_commerce_maison_sound_familiar__content {
    width: 100%;
    max-width: 413px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap_desktop }}px;
  }

