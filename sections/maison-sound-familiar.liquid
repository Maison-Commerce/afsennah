<section class="maison_commerce_maison_sound_familiar">
  <div class="maison_commerce_maison_sound_familiar__container">
    <div class="maison_commerce_maison_sound_familiar__card">
      <div class="maison_commerce_maison_sound_familiar__content-wrapper">
        <!-- Left Column: Video/Image -->
        {% if section.settings.media_type == 'image' and section.settings.media_image != blank %}
          <div class="maison_commerce_maison_sound_familiar__media-wrapper">
            <img 
              src="{{ section.settings.media_image | image_url: width: 890 }}" 
              alt="{{ section.settings.media_image.alt | escape }}"
              class="maison_commerce_maison_sound_familiar__media-image"
              width="{{ section.settings.media_image.width }}"
              height="{{ section.settings.media_image.height }}"
              loading="lazy"
            />
          </div>
        {% elsif section.settings.media_type == 'video' and section.settings.video != blank %}
          <div class="maison_commerce_maison_sound_familiar__media-wrapper">
            <div class="maison_commerce_maison_sound_familiar__video-wrapper" data-video-wrapper="{{ section.id }}">
              {{ section.settings.video | video_tag: 
                class: 'maison_commerce_maison_sound_familiar__video',
                controls: false,
                autoplay: false,
                loop: false,
                muted: false,
                image_size: '890x'
              }}
              <button class="maison_commerce_maison_sound_familiar__play-button" aria-label="Play video" data-play-button="{{ section.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="maison_commerce_maison_sound_familiar__play-icon" width="45" height="45" viewBox="0 0 45 45" fill="none">
                    <path d="M13.082 11.2131V33.6395L31.7707 22.4263L13.082 11.2131Z" fill="white"/>
                </svg>
              </button>
            </div>
          </div>
        {% endif %}

        <!-- Right Column: Content -->
        <div class="maison_commerce_maison_sound_familiar__content">
          <!-- Heading -->
          {% if section.settings.heading != blank %}
            <h2 class="maison_commerce_maison_sound_familiar__heading">
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          <!-- Pain Points List -->
          {% if section.blocks.size > 0 %}
            <div class="maison_commerce_maison_sound_familiar__pain-points">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'pain_point' %}
                    <div class="maison_commerce_maison_sound_familiar__pain-point" {{ block.shopify_attributes }}>
                      <div class="maison_commerce_maison_sound_familiar__icon-wrapper">
                        {% if block.settings.icon_type == 'custom' and block.settings.custom_icon != blank %}
                          <img 
                            src="{{ block.settings.custom_icon | image_url: width: 72 }}" 
                            alt=""
                            class="maison_commerce_maison_sound_familiar__icon"
                            width="18"
                            height="18"
                          />
                        {% else %}
                          <div class="maison_commerce_maison_sound_familiar__icon maison_commerce_maison_sound_familiar__icon--{{ block.settings.icon_type }}">
                            {% case block.settings.icon_type %}
                              {% when 'shampoo' %}
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M9 2L10.5 6H15L11.25 8.5L12.75 13L9 10.5L5.25 13L6.75 8.5L3 6H7.5L9 2Z" fill="currentColor"/>
                                </svg>
                              {% when 'scissors' %}
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M5 2L3 4L8 9L3 14L5 16L10 11L11 12L16 7L14 5L9 10L8 9L5 2Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                              {% when 'brush' %}
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M3 15L6 12M9 9L12 6M15 3L12 6M12 6L9 9M6 12L3 15M6 12L9 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                              {% when 'solutions' %}
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M9 2C5.13 2 2 5.13 2 9C2 12.87 5.13 16 9 16C12.87 16 16 12.87 16 9C16 5.13 12.87 2 9 2ZM9 14C6.24 14 4 11.76 4 9C4 6.24 6.24 4 9 4C11.76 4 14 6.24 14 9C14 11.76 11.76 14 9 14Z" fill="currentColor"/>
                                </svg>
                            {% endcase %}
                          </div>
                        {% endif %}
                      </div>
                      <div class="maison_commerce_maison_sound_familiar__pain-point-text">
                        {{ block.settings.text }}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}

          <!-- Reassurance Banner -->
          <div class="maison_commerce_maison_sound_familiar__banner">
            {% if section.settings.reassurance_text != blank %}
              <div class="maison_commerce_maison_sound_familiar__reassurance-text">
                {{ section.settings.reassurance_text }}
              </div>
            {% endif %}

            {% if section.settings.cta_url != blank %}
              <a href="{{ section.settings.cta_url }}" class="maison_commerce_maison_sound_familiar__cta-button">
                <span>{{ section.settings.cta_text }}</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="maison_commerce_maison_sound_familiar__arrow-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

