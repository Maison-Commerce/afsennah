    }
  }

  .maison_commerce_maison_sound_familiar__cta-button:hover {
    opacity: 0.9;
  }

  .maison_commerce_maison_sound_familiar__cta-button span {
    font-family: 'Gotham', sans-serif;
    font-size: {{ section.settings.cta_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    text-transform: capitalize;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_sound_familiar__cta-button span {
      font-size: {{ section.settings.cta_font_size_mobile }}px;
    }
  }

  .maison_commerce_maison_sound_familiar__arrow-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .maison_commerce_maison_sound_familiar__arrow-icon {
      width: 20px;
      height: 20px;
    }
  }
</style>

<script>
  (function() {
    const videoWrapper = document.querySelector('[data-video-wrapper="{{ section.id }}"]');
    if (!videoWrapper) return;

    const video = videoWrapper.querySelector('.maison_commerce_maison_sound_familiar__video');
    const playButton = videoWrapper.querySelector('[data-play-button="{{ section.id }}"]');
    
    if (!video || !playButton) return;

    // Handle play button click
    playButton.addEventListener('click', function(e) {
      e.stopPropagation();
      toggleVideo();
    });

    // Handle video click (for pause)
    video.addEventListener('click', function(e) {
      e.stopPropagation();
      toggleVideo();
    });

    function toggleVideo() {
      if (video.paused) {
        video.play();
        playButton.classList.add('playing');
        videoWrapper.classList.add('playing');
      } else {
        video.pause();
        playButton.classList.remove('playing');
        videoWrapper.classList.remove('playing');
      }
    }

    // Update button visibility based on video state
    video.addEventListener('play', function() {
      playButton.classList.add('playing');
      videoWrapper.classList.add('playing');
    });

    video.addEventListener('pause', function() {
      playButton.classList.remove('playing');
      videoWrapper.classList.remove('playing');
    });

    // Hide button when video ends
    video.addEventListener('ended', function() {
      playButton.classList.remove('playing');
      videoWrapper.classList.remove('playing');
    });
  })();
</script>

