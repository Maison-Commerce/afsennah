    align-items: center;
  }

  /* Icon Wrapper */
  .maison_commerce_maison_sound_familiar__icon-wrapper {
    flex-shrink: 0;
    width: 44px;
    height: 44px;
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: 66px;
