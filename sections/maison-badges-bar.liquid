<section class="maison_commerce_maison_badges_bar">
  <div class="maison_commerce_maison_badges_bar__container">
    <div class="maison_commerce_maison_badges_bar__wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'badge' %}
          {% unless forloop.first %}
            <div class="maison_commerce_maison_badges_bar__divider"></div>
          {% endunless %}
          <div class="maison_commerce_maison_badges_bar__badge" {{ block.shopify_attributes }}>
            <div class="maison_commerce_maison_badges_bar__icon">
              <svg width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="11" cy="11" r="11" fill="#1A365D"/>
                <path d="M6.5 11L9.5 14L15.5 8" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <span class="maison_commerce_maison_badges_bar__text">{{ block.settings.badge_text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} {
    padding: 0;
  }

  /* Section Container */
  .maison_commerce_maison_badges_bar {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_badges_bar {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_badges_bar__container {
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Wrapper */
  .maison_commerce_maison_badges_bar__wrapper {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.badge_alignment }};
    gap: 16px;
    min-height: 52px;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_badges_bar__wrapper {
      justify-content: {{ section.settings.badge_alignment }};
      overflow-x: scroll;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .maison_commerce_maison_badges_bar__wrapper::-webkit-scrollbar {
      display: none;
    }
  }

  /* Badge */
  .maison_commerce_maison_badges_bar__badge {
    display: flex;
    align-items: center;
    gap: {{ section.settings.icon_text_gap }}px;
    flex-shrink: 0;
  }

  /* Icon */
  .maison_commerce_maison_badges_bar__icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .maison_commerce_maison_badges_bar__icon svg {
    width: 100%;
    height: 100%;
  }

  .maison_commerce_maison_badges_bar__icon circle {
    fill: {{ section.settings.icon_bg_color }};
  }

  .maison_commerce_maison_badges_bar__icon path {
    stroke: {{ section.settings.icon_checkmark_color }};
  }

  /* Text */
  .maison_commerce_maison_badges_bar__text {
    font-family: 'Gotham', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ section.settings.text_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    white-space: nowrap;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_badges_bar__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }
  }

  /* Divider */
  .maison_commerce_maison_badges_bar__divider {
    width: {{ section.settings.divider_width }}px;
    height: {{ section.settings.divider_height }}px;
    background-color: {{ section.settings.divider_color }};
    margin: 0 {{ section.settings.divider_margin }}px;
    flex-shrink: 0;
  }

  @media (max-width: 950px) {
    .maison_commerce_maison_badges_bar__divider {
      width: {{ section.settings.divider_width_mobile }}px;
      height: {{ section.settings.divider_height_mobile }}px;
      margin: 0 {{ section.settings.divider_margin_mobile }}px;
    }
  }
</style>

