{% comment %}
  Testimonial Under Gallery Block
  - Renders below the product gallery on desktop
  - Renders in product info section on mobile (without main image)
{% endcomment %}

{%- liquid
  assign padding = block.settings.padding | default: 24
  assign border_radius = block.settings.border_radius | default: 16
  assign margin_top = block.settings.margin_top | default: 20
  assign border_color = block.settings.border_color | default: '#E8E8E8'
  assign background_color = block.settings.background_color | default: '#F8F7F4'
  assign main_image_width = block.settings.main_image_width | default: 280
-%}

<style>
  /* Desktop styles - under gallery */
  .testimonial-under-gallery-{{ block.id }}.testimonial-desktop {
    display: flex;
    align-items: stretch;
    background-color: {{ background_color }};
    border: 1px solid {{ border_color }};
    border-radius: {{ border_radius }}px;
    margin-top: {{ margin_top }}px;
    position: relative;
  }

  /* Mobile styles - in product info */
  .testimonial-under-gallery-{{ block.id }}.testimonial-mobile {
    display: none;
    background-color: {{ background_color }};
    border: 1px solid {{ border_color }};
    border-radius: {{ border_radius }}px;
    position: relative;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-content {
    flex: 1;
    padding: {{ padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-rating {
    display: flex;
    gap: 2px;
    margin-bottom: 12px;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-rating img {
    width: 18px;
    height: 18px;
    object-fit: contain;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-description {
    font-family: "Stage Grotesk";
    font-weight: 400;
    font-style: Regular;
    font-size: 16px;
    line-height: 150%;
    letter-spacing: 0%;
    vertical-align: middle;
    color: rgba(53, 53, 53, 0.75);
    margin-bottom: 12px;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-author {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
    padding: 4px 12px;
    gap: 4px;
    border-radius: 56px;
    background: #E5E5F4;
    width: fit-content;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-subtitle {
    color: #353535;
    font-family: "Stage Grotesk";
    font-weight: 700;
    font-style: Bold;
    font-size: 12px;
    line-height: 150%;
    letter-spacing: 0%;
    vertical-align: middle;
    text-transform: uppercase;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-verification {
    display: flex;
    align-items: center;
    gap: 4px;
    font-family: "Stage Grotesk";
    font-weight: 700;
    font-style: Bold;
    font-size: 12px;
    leading-trim: NONE;
    line-height: 150%;
    letter-spacing: 0%;
    color: #353535;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-verification::before {
    content: "";
    width: 4px;
    height: 4px;
    border-radius: 100%;    
    background: rgba(60, 28, 19, 0.2);
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-verification img {
    width: 18px;
    height: 18px;
    object-fit: contain;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-image {
    width: {{ main_image_width }}px;
    flex-shrink: 0;
    position: relative;
  }

  .testimonial-under-gallery-{{ block.id }} .testimonial-image img {
    width: 150px;
    height: 172px;
    object-fit: cover;
    object-position: center top;
    position: absolute;
    right: 0;
    bottom: 0;
  }

  /* Desktop: show desktop version, hide mobile */
  @media screen and (min-width: 750px) {
    .testimonial-under-gallery-{{ block.id }} {
      display: none !important;
    }
    .product-container.product-container--modern.gallery .testimonial-under-gallery-{{ block.id }}.testimonial-desktop {
      display: flex !important;
    }
  
  }

  /* Mobile: hide desktop version, show mobile (without image) */
  @media screen and (max-width: 749px) {
      .testimonial-under-gallery-{{ block.id }}. {
        display: flex !important;
      }
     .product-container.product-container--modern.gallery .testimonial-under-gallery-{{ block.id }} {
      display: none !important;
    }
 
    .testimonial-under-gallery-{{ block.id }}.testimonial-mobile .testimonial-image {
      display: none !important;
    }
  }
</style>

<!-- Desktop version - under gallery -->
<div class="testimonial-under-gallery testimonial-under-gallery-{{ block.id }} testimonial-desktop" {{ block.shopify_attributes }}>
  <div class="testimonial-content">
    {%- comment -%} Rating Icons {%- endcomment -%}
    <div class="testimonial-rating">
      {%- if block.settings.rating_icon_1 != blank -%}
        <img src="{{ block.settings.rating_icon_1 | image_url: width: 56 }}" 
             alt="Rating star 1"
             loading="lazy"
             width="28" 
             height="28">
      {%- endif -%}
      {%- if block.settings.rating_icon_2 != blank -%}
        <img src="{{ block.settings.rating_icon_2 | image_url: width: 56 }}" 
             alt="Rating star 2"
             loading="lazy"
             width="28" 
             height="28">
      {%- endif -%}
      {%- if block.settings.rating_icon_3 != blank -%}
        <img src="{{ block.settings.rating_icon_3 | image_url: width: 56 }}" 
             alt="Rating star 3"
             loading="lazy"
             width="28" 
             height="28">
      {%- endif -%}
      {%- if block.settings.rating_icon_4 != blank -%}
        <img src="{{ block.settings.rating_icon_4 | image_url: width: 56 }}" 
             alt="Rating star 4"
             loading="lazy"
             width="28" 
             height="28">
      {%- endif -%}
      {%- if block.settings.rating_icon_5 != blank -%}
        <img src="{{ block.settings.rating_icon_5 | image_url: width: 56 }}" 
             alt="Rating star 5"
             loading="lazy"
             width="28" 
             height="28">
      {%- endif -%}
    </div>

    {%- comment -%} Description {%- endcomment -%}
    {%- if block.settings.description != blank -%}
      <p class="testimonial-description">{{ block.settings.description }}</p>
    {%- endif -%}

    {%- comment -%} Author Info {%- endcomment -%}
    <div class="testimonial-author">
      {%- if block.settings.subtitle != blank -%}
        <span class="testimonial-subtitle">{{ block.settings.subtitle }}</span>
      {%- endif -%}
      
      {%- if block.settings.verification_text != blank or block.settings.verification_icon != blank -%}
        <span class="testimonial-verification">
          {%- if block.settings.verification_icon != blank -%}
            <img src="{{ block.settings.verification_icon | image_url: width: 36 }}" 
                 alt="Verified"
                 loading="lazy"
                 width="18" 
                 height="18">
          {%- endif -%}
          {%- if block.settings.verification_text != blank -%}
            {{ block.settings.verification_text }}
          {%- endif -%}
        </span>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Main Image (only on desktop) {%- endcomment -%}
  {%- if block.settings.main_image != blank -%}
    <div class="testimonial-image">
      <img src="{{ block.settings.main_image | image_url: width: 560 }}" 
           alt="{{ block.settings.subtitle | default: 'Testimonial' }}"
           loading="lazy"
           width="{{ main_image_width }}"
           height="auto">
    </div>
  {%- endif -%}
</div>

