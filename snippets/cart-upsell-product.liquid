{%- comment -%}
  Cart Upsell Product Block
  Parameters:
  - product {Object} - Product object
  - custom_aspect_ratio {Number} - Aspect ratio for images (optional)
  
  Usage:
  {% render 'cart-upsell-product', product: product %}
{%- endcomment -%}

{%- liquid
  assign first_available_variant = product.selected_or_first_available_variant
  assign compare_at_price = first_available_variant.compare_at_price
  assign price = first_available_variant.price
  
  if compare_at_price > price
    assign discount_percent = compare_at_price | minus: price | times: 100.0 | divided_by: compare_at_price | round
  else
    assign discount_percent = 0
  endif
  
  if custom_aspect_ratio
    assign custom_aspect_ratio = custom_aspect_ratio | at_least: 0.6
  endif
-%}
<div class="cart-upsell-product" data-product-id="{{ product.id }}" data-variant-id="{{ first_available_variant.id }}">
  <div class="cart-upsell-product__image">
    <a href="{{ product.url }}" class="cart-upsell-product__image-link">
      {% if product.featured_media %}
        <div
           class="bg-image"
           style="background: url('{{product.featured_media.preview_image | image_url }}') no-repeat;"
          ></div>
        {% comment %} {%- render 'image' with product.featured_media.preview_image, loading: 'lazy', custom_aspect_ratio: custom_aspect_ratio, custom_crop: 'contain' -%} {% endcomment %}
      {% else %}
        <div class="placeholder-image">{{ 'product-1' | placeholder_svg_tag }}</div>
      {% endif %}
    </a>
  </div>
  
  <div class="cart-upsell-product__info">
    <a href="{{ product.url }}" class="cart-upsell-product__title">
      {{ product.title | escape }}
    </a>
    
    <div class="cart-upsell-product__price">
      <span class="cart-upsell-product__price-current">
        {{ price | money }}
      </span>
      {% if compare_at_price > price %}
        <span class="cart-upsell-product__price-compare">
          {{ compare_at_price | money }}
        </span>
      {% endif %}
    </div>
    
    {% if discount_percent > 0 %}
      <div class="cart-upsell-product__badge">
        Save {{ discount_percent }}%
      </div>
    {% endif %}
    
    <button type="button" class="cart-upsell-product__add-btn" data-variant-id="{{ first_available_variant.id }}" aria-label="Add {{ product.title | escape }} to cart">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M4.16666 9.99996H15.8333M9.99999 4.16663V15.8333" stroke="#1A365D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>

      <span>Add</span>
    </button>
  </div>
</div>

<style>
  .cart-upsell-product {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .cart-upsell-product__image {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background: #f5f5f5;
  }
  
  .cart-upsell-product__image-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
  }
  
  .cart-upsell-product__image img,
  .cart-upsell-product__image .placeholder-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }
  
  .cart-upsell-product__info {
    padding: 12px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .cart-upsell-product__title {
    font-weight: bold;
    font-size: 14px;
    line-height: 1.4;
    color: #000;
    text-decoration: none;
    margin-bottom: 8px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .cart-upsell-product__price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }
  
  .cart-upsell-product__price-current {
    font-weight: bold;
    font-size: 16px;
    color: #000;
  }
  
  .cart-upsell-product__price-compare {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }
  
  .cart-upsell-product__badge {
    display: inline-block;
    padding: 4px 8px;
    background: #FFD700;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
    width: fit-content;
  }
  
  .cart-upsell-product__add-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    width: 100%;
    padding: 10px 16px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    color: #000;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: auto;
  }
  
  .cart-upsell-product__add-btn svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }
  
  .cart-upsell-product__add-btn.loading {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }
</style>
